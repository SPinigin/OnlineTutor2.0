@model ErrorViewModel
@{
    ViewData["Title"] = "Ошибка";
    var statusCode = Model.StatusCode ?? 500;
    var errorMessage = Model.GetErrorMessage();
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body text-center">
                    <h1 class="display-1 text-danger">@statusCode</h1>
                    <h2 class="text-danger mb-4">@errorMessage</h2>
                    
                    @if (!string.IsNullOrEmpty(Model.Message) && ViewContext.HttpContext.RequestServices.GetService<Microsoft.AspNetCore.Hosting.IWebHostEnvironment>()?.IsDevelopment() == true)
                    {
                        <div class="alert alert-info mt-4">
                            <strong>Детали ошибки (только в режиме разработки):</strong>
                            <p class="mb-0">@Model.Message</p>
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mt-4">
                            <strong>ID запроса:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="bi bi-house"></i> Вернуться на главную
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Назад
                        </button>
                    </div>

                    @if (statusCode == 404)
                    {
                        <div class="mt-4">
                            <p class="text-muted">Возможно, страница была перемещена или удалена.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
