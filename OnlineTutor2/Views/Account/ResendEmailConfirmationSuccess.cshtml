@{
    ViewData["Title"] = "Письмо отправлено";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                    </div>
                    <h2 class="text-success mb-3">Письмо отправлено!</h2>
                    <p class="text-muted mb-4">
                        Новое письмо с подтверждением отправлено на ваш email.
                        Пожалуйста, проверьте свою почту.
                    </p>
                    <a asp-action="Login" class="btn btn-primary btn-lg">
                        <i class="fas fa-sign-in-alt"></i> Перейти к входу
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
