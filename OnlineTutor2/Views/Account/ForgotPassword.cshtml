@model OnlineTutor2.ViewModels.ForgotPasswordViewModel
@{
    ViewData["Title"] = "Забыли пароль?";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-question-circle"></i> Забыли пароль?
                    </h4>
                </div>
                <div class="card-body p-4">
                    <p class="text-muted mb-4">
                        Введите ваш email, и мы отправим вам ссылку для восстановления пароля.
                    </p>

                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email
                            </label>
                            <input asp-for="Email"
                                   class="form-control form-control-lg"
                                   placeholder="example@mail.com"
                                   autofocus />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-paper-plane"></i> Отправить ссылку
                            </button>
                            <a asp-action="Login" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left"></i> Вернуться к входу
                            </a>
                        </div>
                    </form>
                </div>
            </div>


            <div class="alert alert-info mt-4" role="alert">
                <i class="fas fa-info-circle"></i>
                <strong>Не получили письмо?</strong> Проверьте папку "Спам" или попробуйте еще раз через несколько минут.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
