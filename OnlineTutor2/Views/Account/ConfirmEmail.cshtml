@{
    ViewData["Title"] = "Подтверждение email";
    var hasError = ViewBag.ErrorMessage != null;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow text-center">
                <div class="card-body p-5">
                    @if (!hasError)
                    {
                        <div class="mb-4">
                            <i class="fas fa-check-circle text-success" style="font-size: 6rem;"></i>
                        </div>
                        <h2 class="text-success mb-3">Email успешно подтвержден!</h2>
                        <p class="text-muted mb-4">
                            Спасибо! Ваш email подтвержден. Теперь вы можете войти в систему и начать обучение.
                        </p>

                        <div class="d-grid gap-2">
                            <a asp-action="Login" class="btn btn-success btn-lg">
                                <i class="fas fa-sign-in-alt"></i> Войти в систему
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-home"></i> На главную
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="mb-4">
                            <i class="fas fa-exclamation-circle text-danger" style="font-size: 6rem;"></i>
                        </div>
                        <h2 class="text-danger mb-3">Ошибка подтверждения</h2>
                        <div class="alert alert-danger text-start" role="alert">
                            @ViewBag.ErrorMessage
                        </div>
                        <p class="text-muted mb-4">
                            Возможно, ссылка устарела или уже была использована ранее.
                        </p>

                        <div class="d-grid gap-2">
                            <a asp-action="ResendEmailConfirmation" class="btn btn-primary">
                                <i class="fas fa-redo"></i> Отправить новую ссылку
                            </a>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                                <i class="fas fa-home"></i> На главную
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
