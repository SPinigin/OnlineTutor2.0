@model OnlineTutor2.ViewModels.CreateStudentViewModel
@{
    ViewData["Title"] = "Создание ученика";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-success text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-plus"></i> Создание нового ученика
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i>
                    <strong>Информация:</strong> Для ученика будет создана учетная запись с указанным email и паролем.
                    Ученик сможет войти в систему используя эти данные.
                </div>

                <form asp-action="Create" method="post">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>


                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-user"></i> Личная информация
                        </legend>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="fas fa-user"></i> Имя <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" placeholder="Имя ученика" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="fas fa-user"></i> Фамилия <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" placeholder="Фамилия ученика" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">
                                <i class="fas fa-calendar"></i> Дата рождения <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-address-book"></i> Контактная информация
                        </legend>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" class="form-control" placeholder="email@example.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-info-circle"></i> Будет использоваться для входа в систему
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fas fa-phone"></i> Номер телефона
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" placeholder="+7 (999) 999-99-99" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-graduation-cap"></i> Учебная информация
                        </legend>

                        <div class="row">
                            <div class="col-md-8 mb-3">
                                <label asp-for="School" class="form-label">
                                    <i class="fas fa-school"></i> Школа
                                </label>
                                <input asp-for="School" class="form-control" placeholder="Название школы" />
                                <span asp-validation-for="School" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Grade" class="form-label">
                                    <i class="fas fa-layer-group"></i> Класс
                                </label>
                                <select asp-for="Grade" class="form-select">
                                    <option value="">Не указан</option>
                                    @for (int i = 1; i <= 11; i++)
                                    {
                                        <option value="@i">@i класс</option>
                                    }
                                </select>
                                <span asp-validation-for="Grade" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassId" class="form-label">
                                <i class="fas fa-users"></i> Назначить в класс
                            </label>
                            <select asp-for="ClassId" class="form-select" asp-items="@ViewBag.Classes">
                                <option value="">Без назначения в класс</option>
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-lightbulb"></i> Можно назначить позже через редактирование
                            </div>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-lock"></i> Безопасность
                        </legend>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">
                                <i class="fas fa-key"></i> Пароль <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Password" class="form-control generated-password check-strength"
                                   placeholder="Минимум 6 символов" id="studentPassword" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-shield-alt"></i> Рекомендуется использовать сложный пароль
                            </div>
                        </div>
                    </fieldset>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save"></i> Создать ученика
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/registration.js" asp-append-version="true"></script>

    <script>
        $(document).ready(function() {
            // Добавляем генератор пароля к полю
            PasswordUtils.addPasswordGenerator('studentPassword', 'Сгенерировать пароль');
        });
    </script>
}
