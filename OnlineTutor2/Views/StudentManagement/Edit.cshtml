@model OnlineTutor2.ViewModels.EditStudentViewModel
@{
    ViewData["Title"] = "Редактирование ученика";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas fa-user-edit"></i> Редактирование ученика
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-user"></i> Личная информация
                        </legend>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FirstName" class="form-label">
                                    <i class="fas fa-user"></i> Имя <span class="text-danger">*</span>
                                </label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastName" class="form-label">
                                    <i class="fas fa-user"></i> Фамилия <span class="text-danger">*</span>
                                </label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="DateOfBirth" class="form-label">
                                <i class="fas fa-calendar"></i> Дата рождения <span class="text-danger">*</span>
                            </label>
                            <input asp-for="DateOfBirth" class="form-control" type="date" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-address-book"></i> Контактная информация
                        </legend>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">
                                <i class="fas fa-envelope"></i> Email <span class="text-danger">*</span>
                            </label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            <div class="form-text">
                                <i class="fas fa-warning text-warning"></i> Изменение email повлияет на вход в систему
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">
                                <i class="fas fa-phone"></i> Номер телефона
                            </label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <fieldset class="mb-4">
                        <legend class="fs-6 text-primary border-bottom pb-1 mb-3">
                            <i class="fas fa-graduation-cap"></i> Учебная информация
                        </legend>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="StudentNumber" class="form-label">
                                    <i class="fas fa-id-card"></i> ID ученика
                                </label>
                                <input asp-for="StudentNumber" class="form-control" readonly />

                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Grade" class="form-label">
                                    <i class="fas fa-layer-group"></i> Класс в школе
                                </label>
                                <select asp-for="Grade" class="form-select">
                                    <option value="">Не указан</option>
                                    @for (int i = 1; i <= 11; i++)
                                    {
                                        <option value="@i">@i класс</option>
                                    }
                                </select>
                                <span asp-validation-for="Grade" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="School" class="form-label">
                                <i class="fas fa-school"></i> Школа
                            </label>
                            <input asp-for="School" class="form-control" />
                            <span asp-validation-for="School" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ClassId" class="form-label">
                                <i class="fas fa-users"></i> Назначен в онлайн-класс
                            </label>
                            <select asp-for="ClassId" class="form-select" asp-items="@ViewBag.Classes">
                                <option value="">Без назначения в класс</option>
                            </select>
                            <span asp-validation-for="ClassId" class="text-danger"></span>
                        </div>
                    </fieldset>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye"></i> Просмотр
                        </a>
                        <a asp-action="Index" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save"></i> Сохранить изменения
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/layout.js" asp-append-version="true"></script>
}
