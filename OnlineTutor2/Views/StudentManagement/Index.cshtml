@model IEnumerable<OnlineTutor2.Models.Student>
@{
    ViewData["Title"] = "Управление учениками";
    var pageNumber = ViewBag.PageNumber ?? 1;
    var pageSize = ViewBag.PageSize ?? 10;
    var totalPages = ViewBag.TotalPages ?? 1;
    var totalCount = ViewBag.TotalCount ?? 0;
}

<div class="container-fluid px-2 px-md-3">
    <div class="d-flex justify-content-between align-items-center mb-3 flex-wrap gap-2">
        <h4 class="mb-0 d-flex align-items-center gap-2">
            <i class="fas fa-user-graduate text-primary"></i>
            <span>Управление учениками</span>
        </h4>
        <div class="btn-group btn-group-sm gap-1" role="group">
            <a asp-action="Import" class="btn btn-info rounded">
                <i class="fas fa-file-excel"></i> <span class="d-none d-sm-inline">Импорт</span>
            </a>
            <a asp-action="AddExisting" class="btn btn-outline-success rounded">
                <i class="fas fa-user-plus"></i> <span class="d-none d-sm-inline">Добавить</span>
            </a>
            <a asp-action="Create" class="btn btn-success rounded">
                <i class="fas fa-plus"></i> <span class="d-none d-sm-inline">Создать</span>
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm mb-3">
        <div class="card-body py-2 px-3">
            <form method="get" class="row g-2">
                <div class="col-12 col-md-4">
                    <label for="searchString" class="form-label small mb-1">
                        <i class="fas fa-search"></i> Поиск
                    </label>
                    <input type="text" class="form-control form-control-sm" name="searchString" value="@ViewBag.CurrentFilter"
                           placeholder="Имя, фамилия, email, школа..." />
                </div>
                <div class="col-6 col-md-3">
                    <label for="classFilter" class="form-label small mb-1">
                        <i class="fas fa-filter"></i> Класс
                    </label>
                    <select class="form-select form-select-sm" name="classFilter">
                        <option value="">Все ученики</option>
                        <option value="0">Без класса</option>
                        @if (ViewBag.Classes != null)
                        {
                            @foreach (var item in (SelectList)ViewBag.Classes)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        }
                    </select>
                </div>
                <div class="col-6 col-md-3">
                    <label for="sortOrder" class="form-label small mb-1">
                        <i class="fas fa-sort"></i> Сортировка
                    </label>
                    <select class="form-select form-select-sm" name="sortOrder">
                        <option value="">По фамилии (А-Я)</option>
                        <option value="name_desc">По фамилии (Я-А)</option>
                        <option value="Date">По дате добавления (старые)</option>
                        <option value="date_desc">По дате добавления (новые)</option>
                    </select>
                </div>
                <div class="col-12 col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary btn-sm w-100">
                        <i class="fas fa-search"></i> Найти
                    </button>
                </div>
                <input type="hidden" name="pageNumber" value="1" />
                <input type="hidden" name="pageSize" value="@pageSize" />
            </form>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-user-graduate text-muted" style="font-size: 4rem;"></i>
            <h4 class="mt-3 text-muted">Учеников не найдено</h4>
            <p class="text-muted">
                @if (!string.IsNullOrEmpty(ViewBag.CurrentFilter as string))
                {
                    <span>По вашему запросу учеников не найдено. Попробуйте изменить критерии поиска.</span>
                }
                else
                {
                    <span>Добавьте первого ученика для начала работы</span>
                }
            </p>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-plus"></i> Добавить ученика
            </a>
        </div>
    }
    else
    {
        
        @* <div class="row g-2 mb-3">
            <div class="col-6 col-md-3">
                <div class="card stats-card-compact border-0 shadow-sm h-100">
                    <div class="card-body text-center py-2 px-1">
                        <i class="fas fa-users text-primary mb-1"></i>
                        <h5 class="mb-0 text-primary fw-bold">@totalCount</h5>
                        <small class="text-muted d-block">Всего учеников</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card stats-card-compact border-0 shadow-sm h-100">
                    <div class="card-body text-center py-2 px-1">
                        <i class="fas fa-eye text-info mb-1"></i>
                        <h5 class="mb-0 text-info fw-bold">@Model.Count()</h5>
                        <small class="text-muted d-block">На странице</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card stats-card-compact border-0 shadow-sm h-100">
                    <div class="card-body text-center py-2 px-1">
                        <i class="fas fa-file-alt text-success mb-1"></i>
                        <h5 class="mb-0 text-success fw-bold">@totalPages</h5>
                        <small class="text-muted d-block">Страниц</small>
                    </div>
                </div>
            </div>
            <div class="col-6 col-md-3">
                <div class="card stats-card-compact border-0 shadow-sm h-100">
                    <div class="card-body text-center py-2 px-1">
                        <i class="fas fa-list-ol text-warning mb-1"></i>
                        <h5 class="mb-0 text-warning fw-bold">@pageSize</h5>
                        <small class="text-muted d-block">На странице</small>
                    </div>
                </div>
            </div>
        </div> *@

        <div class="card border-0 shadow-sm mb-3">
            <div class="card-header bg-white border-0 py-2 px-3">
                <div class="d-flex justify-content-between align-items-center flex-wrap gap-2">
                    <h6 class="mb-0 fw-semibold">
                        <i class="fas fa-table text-primary"></i> Список учеников (@totalCount)
                    </h6>
                    <div class="d-flex align-items-center gap-2">
                        <label for="pageSizeSelect" class="small mb-0 text-nowrap">Показать:</label>
                        <select id="pageSizeSelect" class="form-select form-select-sm" style="width: auto;" onchange="changePageSize(this.value)">
                            <option value="10" @@(pageSize == 10 ? "selected" : "")>10</option>
                            <option value="25" @@(pageSize == 25 ? "selected" : "")>25</option>
                            <option value="50" @@(pageSize == 50 ? "selected" : "")>50</option>
                            <option value="100" @@(pageSize == 100 ? "selected" : "")>100</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover table-compact mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.NameSortParm" 
                                       asp-route-currentFilter="@ViewBag.CurrentFilter" 
                                       asp-route-classFilter="@ViewBag.ClassFilter"
                                       asp-route-pageNumber="@pageNumber"
                                       asp-route-pageSize="@pageSize"
                                       class="text-decoration-none">
                                        Ученик
                                        @if (ViewBag.CurrentSort == "" || ViewBag.CurrentSort == null)
                                        {
                                            <i class="fas fa-sort-up"></i>
                                        }
                                        else if (ViewBag.CurrentSort == "name_desc")
                                        {
                                            <i class="fas fa-sort-down"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort"></i>
                                        }
                                    </a>
                                </th>
                                <th class="d-none d-md-table-cell">Контакты</th>
                                <th class="d-none d-md-table-cell">Школа/Класс</th>
                                <th>Онлайн-класс</th>
                                <th class="d-none d-md-table-cell">
                                    <a asp-action="Index" asp-route-sortOrder="@ViewBag.DateSortParm" 
                                       asp-route-currentFilter="@ViewBag.CurrentFilter" 
                                       asp-route-classFilter="@ViewBag.ClassFilter"
                                       asp-route-pageNumber="@pageNumber"
                                       asp-route-pageSize="@pageSize"
                                       class="text-decoration-none">
                                        Дата добавления
                                        @if (ViewBag.CurrentSort == "Date")
                                        {
                                            <i class="fas fa-sort-up"></i>
                                        }
                                        else if (ViewBag.CurrentSort == "date_desc")
                                        {
                                            <i class="fas fa-sort-down"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-sort"></i>
                                        }
                                    </a>
                                </th>
                                <th class="text-center" style="width: 120px;">Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-graduate text-primary me-2"></i>
                                            <div>
                                                <strong>@student.User.FullName</strong>
                                                @if (!string.IsNullOrEmpty(student.StudentNumber))
                                                {
                                                    <br><small class="text-muted">№ @student.StudentNumber</small>
                                                }
                                            </div>
                                        </div>
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <div>
                                            <i class="fas fa-envelope text-muted me-1"></i>
                                            <small>@student.User.Email</small>
                                        </div>
                                        @if (!string.IsNullOrEmpty(student.User.PhoneNumber))
                                        {
                                            <div>
                                                <i class="fas fa-phone text-muted me-1"></i>
                                                <small>@student.User.PhoneNumber</small>
                                            </div>
                                        }
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        @if (!string.IsNullOrEmpty(student.School))
                                        {
                                            <div>
                                                <i class="fas fa-school text-muted me-1"></i>
                                                <small>@student.School</small>
                                            </div>
                                        }
                                        @if (student.Grade.HasValue)
                                        {
                                            <div>
                                                <i class="fas fa-layer-group text-muted me-1"></i>
                                                <small>@student.Grade класс</small>
                                            </div>
                                        }
                                    </td>
                                    <td>
                                        @if (student.Class != null)
                                        {
                                            <span class="badge bg-success badge-sm">
                                                <i class="fas fa-users"></i> @student.Class.Name
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning badge-sm">
                                                <i class="fas fa-exclamation-triangle"></i> <span class="d-none d-sm-inline">Без класса</span>
                                            </span>
                                        }
                                    </td>
                                    <td class="d-none d-md-table-cell">
                                        <small class="text-muted">@student.CreatedAt.ToString("dd.MM.yyyy")</small>
                                    </td>
                                    <td class="actions-cell">
                                        <div class="d-flex justify-content-center gap-1">
                                            <a asp-action="Details" asp-route-id="@student.Id"
                                               class="btn btn-outline-info btn-sm btn-icon" title="Детали">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@student.Id"
                                               class="btn btn-outline-primary btn-sm btn-icon" title="Редактировать">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" 
                                                    class="btn btn-outline-success btn-sm btn-icon" 
                                                    title="Назначить в класс"
                                                    onclick="showAssignClassModal(@student.Id, '@student.User.FullName', @(student.ClassId?.ToString() ?? "null"))">
                                                <i class="fas fa-users"></i>
                                            </button>
                                            <a asp-action="Delete" asp-route-id="@student.Id" 
                                               class="btn btn-outline-danger btn-sm btn-icon" 
                                               title="Удалить">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

            
            @if (totalPages > 1)
            {
                <div class="card-footer bg-white border-0 py-2 px-3">
                    <nav aria-label="Page navigation">
                        <ul class="pagination pagination-sm justify-content-center mb-0 flex-wrap gap-1">
                            
                            @if (pageNumber > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" 
                                       asp-action="Index" 
                                       asp-route-pageNumber="1"
                                       asp-route-pageSize="@pageSize"
                                       asp-route-sortOrder="@ViewBag.CurrentSort"
                                       asp-route-currentFilter="@ViewBag.CurrentFilter"
                                       asp-route-classFilter="@ViewBag.ClassFilter">
                                        <i class="fas fa-angle-double-left"></i>
                                    </a>
                                </li>
                            }

                            
                            <li class="page-item @(pageNumber == 1 ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-pageNumber="@(pageNumber - 1)"
                                   asp-route-pageSize="@pageSize"
                                   asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                                   asp-route-classFilter="@ViewBag.ClassFilter">
                                    <i class="fas fa-angle-left"></i>
                                </a>
                            </li>

                            
                            @{
                                var startPage = Math.Max(1, pageNumber - 2);
                                var endPage = Math.Min(totalPages, pageNumber + 2);
                                
                                if (startPage > 1)
                                {
                                    <li class="page-item disabled d-none d-sm-block">
                                        <span class="page-link">...</span>
                                    </li>
                                }

                                for (int i = startPage; i <= endPage; i++)
                                {
                                    <li class="page-item @(i == pageNumber ? "active" : "")">
                                        <a class="page-link" 
                                           asp-action="Index" 
                                           asp-route-pageNumber="@i"
                                           asp-route-pageSize="@pageSize"
                                           asp-route-sortOrder="@ViewBag.CurrentSort"
                                           asp-route-currentFilter="@ViewBag.CurrentFilter"
                                           asp-route-classFilter="@ViewBag.ClassFilter">
                                            @i
                                        </a>
                                    </li>
                                }

                                if (endPage < totalPages)
                                {
                                    <li class="page-item disabled d-none d-sm-block">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }

                            
                            <li class="page-item @(pageNumber == totalPages ? "disabled" : "")">
                                <a class="page-link" 
                                   asp-action="Index" 
                                   asp-route-pageNumber="@(pageNumber + 1)"
                                   asp-route-pageSize="@pageSize"
                                   asp-route-sortOrder="@ViewBag.CurrentSort"
                                   asp-route-currentFilter="@ViewBag.CurrentFilter"
                                   asp-route-classFilter="@ViewBag.ClassFilter">
                                    <i class="fas fa-angle-right"></i>
                                </a>
                            </li>

                            
                            @if (pageNumber < totalPages)
                            {
                                <li class="page-item">
                                    <a class="page-link" 
                                       asp-action="Index" 
                                       asp-route-pageNumber="@totalPages"
                                       asp-route-pageSize="@pageSize"
                                       asp-route-sortOrder="@ViewBag.CurrentSort"
                                       asp-route-currentFilter="@ViewBag.CurrentFilter"
                                       asp-route-classFilter="@ViewBag.ClassFilter">
                                        <i class="fas fa-angle-double-right"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    </nav>
                    <div class="text-center mt-2">
                        <small class="text-muted">
                            Страница @pageNumber из @totalPages (всего записей: @totalCount)
                        </small>
                    </div>
                </div>
            }
        </div>
    }
</div>

<div class="modal fade" id="assignClassModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header py-2">
                <h6 class="modal-title mb-0">
                    <i class="fas fa-users"></i> Назначить в класс
                </h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form method="post" asp-action="AssignToClass">
                <div class="modal-body py-3">
                    <input type="hidden" name="studentId" id="modalStudentId" />
                    <p class="mb-2">Ученик: <strong id="modalStudentName"></strong></p>
                    <div class="mb-0">
                        <label for="modalClassId" class="form-label small fw-semibold mb-1">Выберите класс:</label>
                        <select class="form-select form-select-sm" name="classId" id="modalClassId">
                            <option value="">Исключить из всех классов</option>
                            @foreach (var item in (SelectList)ViewBag.Classes)
                            {
                                <option value="@item.Value">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="modal-footer py-2">
                    <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Отмена</button>
                    <button type="submit" class="btn btn-primary btn-sm">Назначить</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script>
        function showAssignClassModal(studentId, studentName, currentClassId) {
            document.getElementById('modalStudentId').value = studentId;
            document.getElementById('modalStudentName').textContent = studentName;

            const classSelect = document.getElementById('modalClassId');
            classSelect.value = currentClassId || '';

            const modal = new bootstrap.Modal(document.getElementById('assignClassModal'));
            modal.show();
        }

        function changePageSize(pageSize) {
            const url = new URL(window.location.href);
            url.searchParams.set('pageSize', pageSize);
            url.searchParams.set('pageNumber', '1'); // Сброс на первую страницу
            window.location.href = url.toString();
        }

        // Восстанавливаем выбранные значения фильтров
        document.addEventListener('DOMContentLoaded', function() {
            // Восстанавливаем фильтр класса
            const classFilter = '@ViewBag.ClassFilter';
            if (classFilter) {
                const classSelect = document.querySelector('select[name="classFilter"]');
                if (classSelect) {
                    classSelect.value = classFilter;
                }
            }

            // Восстанавливаем сортировку
            const currentSort = '@ViewBag.CurrentSort';
            if (currentSort) {
                const sortSelect = document.querySelector('select[name="sortOrder"]');
                if (sortSelect) {
                    sortSelect.value = currentSort;
                }
            }
        });
    </script>
}
