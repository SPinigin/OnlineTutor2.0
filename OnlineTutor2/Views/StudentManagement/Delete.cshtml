@model OnlineTutor2.Models.Student
@{
    ViewData["Title"] = "Удаление ученика";

    var totalTestResults = Model.RegularTestResults.Count +
                         Model.SpellingTestResults.Count +
                         Model.PunctuationTestResults.Count +
                         Model.OrthoeopyTestResults.Count;
}

<div class="container-fluid px-2 px-sm-3">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-11 col-md-10 col-lg-8 col-xl-6">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white py-2">
                    <h5 class="mb-0 delete-form-title">
                        <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                    </h5>
                </div>
                <div class="card-body delete-form-body">
                    <div class="alert alert-danger delete-form-alert mb-2 mb-sm-3">
                        <small class="delete-form-alert-text">
                            <i class="fas fa-warning"></i>
                            <strong>Внимание!</strong> Это действие нельзя отменить.
                        </small>
                    </div>

                    <div class="card mb-2 mb-sm-3">
                        <div class="card-body delete-form-student-info">
                            <div class="row align-items-center g-2">
                                <div class="col-auto">
                                    <div class="bg-primary rounded-circle d-flex align-items-center justify-content-center delete-form-avatar">
                                        <i class="fas fa-user-graduate text-white delete-form-avatar-icon"></i>
                                    </div>
                                </div>
                                <div class="col">
                                    <h6 class="mb-1 delete-form-name">@Model.User.FullName</h6>
                                    <div class="row g-1 g-sm-2">
                                        <div class="col-12 col-sm-6">
                                            <small class="text-muted d-block delete-form-info-text">
                                                <i class="fas fa-envelope fa-fw"></i> 
                                                <span class="delete-form-email">@Model.User.Email</span>
                                            </small>
                                            @if (!string.IsNullOrEmpty(Model.User.PhoneNumber))
                                            {
                                                <small class="text-muted d-block delete-form-info-text">
                                                    <i class="fas fa-phone fa-fw"></i> @Model.User.PhoneNumber
                                                </small>
                                            }
                                        </div>
                                        <div class="col-12 col-sm-6">
                                            <small class="text-muted d-block delete-form-info-text">
                                                <i class="fas fa-calendar fa-fw"></i> @Model.User.Age лет
                                            </small>
                                            @if (Model.Class != null)
                                            {
                                                <small class="text-muted d-block delete-form-info-text">
                                                    <i class="fas fa-users fa-fw"></i> @Model.Class.Name
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-2 mb-2 mb-sm-3">
                        <div class="col-4">
                            <div class="text-center delete-form-stat">
                                <div class="text-danger fw-bold delete-form-stat-number">@totalTestResults</div>
                                <small class="text-muted d-block delete-form-stat-label">Тестов</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center delete-form-stat">
                                <div class="text-danger fw-bold delete-form-stat-number">@Model.Grades.Count</div>
                                <small class="text-muted d-block delete-form-stat-label">Оценок</small>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="text-center delete-form-stat">
                                <div class="text-danger fw-bold delete-form-stat-number">1</div>
                                <small class="text-muted d-block delete-form-stat-label">Аккаунт</small>
                            </div>
                        </div>
                    </div>

                    @if (totalTestResults > 0 || Model.Grades.Any())
                    {
                        <div class="alert alert-warning delete-form-alert mb-2 mb-sm-3">
                            <small class="delete-form-warning-text">
                                <i class="fas fa-info-circle"></i>
                                <strong>Будет удалено:</strong>
                                @if (totalTestResults > 0)
                                {
                                    <span>тесты (@totalTestResults),</span>
                                }
                                @if (Model.Grades.Any())
                                {
                                    <span>оценки (@Model.Grades.Count),</span>
                                }
                                аккаунт
                            </small>
                        </div>
                    }

                    <div>
                        <label for="confirmationText" class="form-label mb-1 delete-form-label">
                            <small><strong>Введите фамилию:</strong></small>
                        </label>
                        <input type="text"
                               id="confirmationText"
                               class="form-control form-control-sm"
                               placeholder="@Model.User.LastName"
                               autocomplete="off" />
                        <div class="form-text delete-form-hint">
                            Введите: <strong id="expectedTextDisplay">@Model.User.LastName</strong>
                        </div>
                    </div>
                </div>
                <div class="card-footer delete-form-footer">
                    <form asp-action="Delete" method="post" class="d-inline" id="deleteForm">
                        <div class="d-flex justify-content-end gap-2 flex-wrap delete-form-buttons">
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-info delete-form-btn">
                                <i class="fas fa-eye"></i> 
                                <span class="d-none d-sm-inline">Просмотр</span>
                            </a>
                            <a asp-action="Index" class="btn btn-sm btn-secondary delete-form-btn">
                                <i class="fas fa-arrow-left"></i> Отмена
                            </a>
                            <button type="submit" class="btn btn-sm btn-outline-danger delete-form-btn" id="deleteButton" disabled>
                                <i class="fas fa-trash"></i> Удалить
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function() {
            const expectedTextElement = document.getElementById('expectedTextDisplay');
            const expectedText = expectedTextElement ? expectedTextElement.textContent.trim() : '';
            
            const confirmationInput = document.getElementById('confirmationText');
            const deleteButton = document.getElementById('deleteButton');
            const deleteForm = document.getElementById('deleteForm');

            if (!confirmationInput || !deleteButton || !deleteForm) {
                console.error('Required elements not found!');
                return;
            }

            function checkInput() {
                const inputValue = confirmationInput.value.trim();
                
                if (inputValue === expectedText) {
                    deleteButton.disabled = false;
                    deleteButton.classList.remove('btn-outline-danger');
                    deleteButton.classList.add('btn-danger');
                } else {
                    deleteButton.disabled = true;
                    deleteButton.classList.remove('btn-danger');
                    deleteButton.classList.add('btn-outline-danger');
                }
            }

            confirmationInput.addEventListener('input', checkInput);
            confirmationInput.addEventListener('keyup', checkInput);
            confirmationInput.addEventListener('change', checkInput);

            deleteForm.addEventListener('submit', function(e) {
                const inputValue = confirmationInput.value.trim();
                if (inputValue !== expectedText) {
                    e.preventDefault();
                    alert('Введите фамилию ученика для подтверждения удаления: ' + expectedText);
                    return false;
                }
            });
        })();
    </script>
}
