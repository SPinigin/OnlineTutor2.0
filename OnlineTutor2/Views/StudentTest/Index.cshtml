                                <div class="row text-center mb-3 g-2">
                                    <div class="col-4">
                                        <div class="d-flex flex-column p-2 bg-light rounded">
                                            <span class="h6 text-warning mb-0">@test.PunctuationQuestions.Count</span>
                                            <small class="text-muted">вопросов</small>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="d-flex flex-column p-2 bg-light rounded">
                                            <span class="h6 text-info mb-0">@test.TimeLimit</span>
                                            <small class="text-muted">минут</small>
                                        </div>
