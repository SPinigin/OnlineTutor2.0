            <h4 class="mb-3">
                <i class="fas fa-list-ul text-info"></i> Классические тесты
            </h4>
            <div class="row" id="regularTestsContainer">
                @foreach (var test in Model.RegularTests)
                {
                    var attemptsUsed = test.RegularTestResults.Count(r => r.StudentId == Model.Student.Id);
                    var canTakeTest = attemptsUsed < test.MaxAttempts;
                    var bestResult = test.RegularTestResults
                        .Where(r => r.StudentId == Model.Student.Id && r.IsCompleted)
                        .OrderByDescending(r => r.Percentage)
                        .FirstOrDefault();

                    <div class="col-12 col-sm-6 col-lg-4 mb-4 test-card" data-test-title="@test.Title.ToLower()">
                        <div class="card h-100 shadow-sm hover-card">
                            <div class="card-header bg-info bg-opacity-10">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h6 class="mb-0 text-truncate" title="@test.Title">
                                        <i class="fas fa-list-ul text-info"></i> 
                                        <span class="fw-bold">@test.Title</span>
                                    </h6>
                                    <span class="badge bg-light text-dark ms-2">
                                        @switch (test.Type)
                                        {
                                            case TestType.Practice:
                                                <i class="fas fa-dumbbell" title="Практика"></i>
                                                break;
                                            case TestType.Quiz:
                                                <i class="fas fa-question-circle" title="Квиз"></i>
                                                break;
                                            case TestType.Exam:
                                                <i class="fas fa-graduation-cap" title="Экзамен"></i>
                                                break;
                                            case TestType.Homework:
                                                <i class="fas fa-home" title="Домашнее задание"></i>
                                                break;
                                        }
