                                                        <i class="fas fa-graduation-cap" title="Экзамен"></i>
                                                        break;
                                                    case TestType.Homework:
                                                        <i class="fas fa-home" title="Домашнее задание"></i>
                                                        break;
                                                }
                                            </small>
                                            @if (bestResult != null)
                                            {
                                                <small class="d-md-none">
                                                    <span class="badge bg-@(bestResult.Percentage >= 80 ? "success" : bestResult.Percentage >= 60 ? "warning" : "danger")">
                                                        @bestResult.Percentage.ToString("F1")%
                                                    </span>
                                                </small>
                                            }
                                        </div>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell">
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <small class="text-muted">@test.Description</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-info rounded-pill">
                                        @test.RegularQuestions.Count
                                    </span>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-info rounded-pill">
                                        @test.TimeLimit мин
                                    </span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-@(attemptsUsed >= test.MaxAttempts ? "danger" : "warning") rounded-pill">
                                        @attemptsUsed/@test.MaxAttempts
                                    </span>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    @if (bestResult != null)
                                    {
                                        <span class="badge bg-@(bestResult.Percentage >= 80 ? "success" : bestResult.Percentage >= 60 ? "warning" : "danger") rounded-pill">
                                            @bestResult.Percentage.ToString("F1")%
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>

                                <td class="text-center mobile-visible">
                                    @if (canTakeTest)
                                    {
                                        <a asp-action="StartRegular" asp-route-id="@test.Id"
                                           class="btn btn-info btn-sm text-white">
                                            <i class="fas fa-play"></i>
                                            <span class="d-none d-md-inline">Начать</span>
                                        </a>
                                    }
                                    else
                                    {
                                        <button class="btn btn-secondary btn-sm" disabled>
                                            <i class="fas fa-lock"></i>
                                            <span class="d-none d-md-inline">Исчерпано</span>
                                        </button>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}


