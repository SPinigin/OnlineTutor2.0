@model OnlineTutor2.ViewModels.StudentTestHistoryViewModel
@{
    ViewData["Title"] = "История прохождения тестов";
    var testType = ViewBag.TestType as string;
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-history text-primary"></i> История прохождения тестов</h2>
    <a asp-action="Index" class="btn btn-outline-primary">
        <i class="fas fa-arrow-left"></i> К доступным тестам
    </a>
</div>

<div class="card mb-4">
    <div class="card-body">
        <div class="btn-group w-100" role="group">
            <a asp-action="History" class="btn btn-@(string.IsNullOrEmpty(testType) ? "primary" : "outline-primary")">
                <i class="fas fa-list"></i> Все тесты
            </a>
            <a asp-action="History" asp-route-testType="spelling" class="btn btn-@(testType == "spelling" ? "primary" : "outline-success")">
                <i class="fas fa-spell-check"></i> Орфография
            </a>
            <a asp-action="History" asp-route-testType="punctuation" class="btn btn-@(testType == "punctuation" ? "warning" : "outline-success")">
                <i class="fas fa-quote-right"></i> Пунктуация
            </a>
            <a asp-action="History" asp-route-testType="orthoepy" class="btn btn-@(testType == "orthoepy" ? "success" : "outline-success")">
                <i class="fas fa-volume-up"></i> Орфоэпия
            </a>
            <a asp-action="History" asp-route-testType="regular" class="btn btn-@(testType == "regular" ? "success" : "outline-success")">
                <i class="fas fa-list-ul"></i> Классические
            </a>
        </div>
    </div>
</div>

@if (!Model.SpellingResults.Any() && !Model.PunctuationResults.Any() && !Model.OrthoeopyResults.Any() && !Model.RegularResults.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">История пуста</h4>
        <p class="text-muted">Вы еще не проходили тесты</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-play"></i> Пройти первый тест
        </a>
    </div>
}
else
{
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h4 class="text-primary">@(Model.SpellingResults.Count() + Model.PunctuationResults.Count() + Model.OrthoeopyResults.Count() + Model.RegularResults.Count())</h4>
                    <small class="text-muted">Тестов пройдено</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    @{
                        var avgPercentage = 0.0;
    
                        var allPercentages = new List<double>();
                        allPercentages.AddRange(Model.SpellingResults.Select(r => r.Percentage));
                        allPercentages.AddRange(Model.PunctuationResults.Select(r => r.Percentage));
                        allPercentages.AddRange(Model.OrthoeopyResults.Select(r => r.Percentage));
                        allPercentages.AddRange(Model.RegularResults.Select(r => r.Percentage));
    
                        if (allPercentages.Any())
                        {
                            avgPercentage = allPercentages.Average();
                        }
                    }
                    <h4 class="text-success">@avgPercentage.ToString("F1")%</h4>
                    <small class="text-muted">Средний результат</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    @{
                        var maxPercentage = 0.0;
                        if (Model.SpellingResults.Any() || Model.PunctuationResults.Any() || Model.OrthoeopyResults.Any() || Model.RegularResults.Any())
                        {
                            var spellingMax = Model.SpellingResults.Any() ? Model.SpellingResults.Max(r => r.Percentage) : 0;
                            var punctuationMax = Model.PunctuationResults.Any() ? Model.PunctuationResults.Max(r => r.Percentage) : 0;
                            var orthoeopyMax = Model.OrthoeopyResults.Any() ? Model.OrthoeopyResults.Max(r => r.Percentage) : 0;
                            var regularMax = Model.RegularResults.Any() ? Model.RegularResults.Max(r => r.Percentage) : 0;
                            maxPercentage = Math.Max(Math.Max(spellingMax, punctuationMax), orthoeopyMax);
                        }
                    }
                    <h4 class="text-info">@maxPercentage.ToString("F1")%</h4>
                    <small class="text-muted">Лучший результат</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h4 class="text-warning">@(Model.SpellingResults.Sum(r => r.Score) + Model.PunctuationResults.Sum(r => r.Score) + Model.OrthoeopyResults.Sum(r => r.Score) + Model.RegularResults.Sum(r => r.Score))</h4>
                    <small class="text-muted">Всего баллов</small>
                </div>
            </div>
        </div>
    </div>

    @if (Model.SpellingResults.Any() && (string.IsNullOrEmpty(testType) || testType == "spelling"))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-spell-check text-primary"></i> Тесты по орфографии
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Тест</th>
                                <th>Дата прохождения</th>
                                <th>Попытка</th>
                                <th>Результат</th>
                                <th>Время</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.SpellingResults)
                            {
                                var duration = result.CompletedAt.HasValue
                                ? (result.CompletedAt.Value - result.StartedAt).ToString(@"mm\:ss")
                                : "-";

                                <tr>
                                    <td>
                                        <div>
                                            <strong>@result.SpellingTest.Title</strong>
                                            <br>
                                            <small class="text-muted">
                                                @result.SpellingTest.SpellingQuestions.Count вопросов
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            @result.CompletedAt?.ToString("dd.MM.yyyy")
                                            <br>
                                            <small class="text-muted">
                                                @result.CompletedAt?.ToString("HH:mm")
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            @result.AttemptNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") me-2">
                                                @result.Percentage.ToString("F1")%
                                            </span>
                                            <small class="text-muted">
                                                @result.Score/@result.MaxScore
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="small">@duration</span>
                                    </td>
                                    <td>
                                        <a asp-action="SpellingResult" asp-route-id="@result.Id"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Подробно
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (Model.PunctuationResults.Any() && (string.IsNullOrEmpty(testType) || testType == "punctuation"))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-exclamation text-warning"></i> Тесты на пунктуацию
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Тест</th>
                                <th>Дата прохождения</th>
                                <th>Попытка</th>
                                <th>Результат</th>
                                <th>Время</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.PunctuationResults)
                            {
                                var duration = result.CompletedAt.HasValue
                                ? (result.CompletedAt.Value - result.StartedAt).ToString(@"mm\:ss")
                                : "-";

                                <tr>
                                    <td>
                                        <div>
                                            <strong>@result.PunctuationTest.Title</strong>
                                            <br>
                                            <small class="text-muted">
                                                @result.PunctuationTest.PunctuationQuestions.Count вопросов
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            @result.CompletedAt?.ToString("dd.MM.yyyy")
                                            <br>
                                            <small class="text-muted">
                                                @result.CompletedAt?.ToString("HH:mm")
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            @result.AttemptNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") me-2">
                                                @result.Percentage.ToString("F1")%
                                            </span>
                                            <small class="text-muted">
                                                @result.Score/@result.MaxScore
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="small">@duration</span>
                                    </td>
                                    <td>
                                        <a asp-action="PunctuationResult" asp-route-id="@result.Id"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Подробно
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (Model.OrthoeopyResults.Any() && (string.IsNullOrEmpty(testType) || testType == "orthoepy"))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="mb-0">
                    <i class="fas fa-volume-up text-success"></i> Тесты на орфоэпию
                </h5>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Тест</th>
                                <th>Дата прохождения</th>
                                <th>Попытка</th>
                                <th>Результат</th>
                                <th>Время</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.OrthoeopyResults)
                            {
                                var duration = result.CompletedAt.HasValue
                                ? (result.CompletedAt.Value - result.StartedAt).ToString(@"mm\:ss")
                                : "-";

                                <tr>
                                    <td>
                                        <div>
                                            <strong>@result.OrthoeopyTest.Title</strong>
                                            <br>
                                            <small class="text-muted">
                                                @result.OrthoeopyTest.OrthoeopyQuestions.Count вопросов
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <div>
                                            @result.CompletedAt?.ToString("dd.MM.yyyy")
                                            <br>
                                            <small class="text-muted">
                                                @result.CompletedAt?.ToString("HH:mm")
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            @result.AttemptNumber
                                        </span>
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") me-2">
                                                @result.Percentage.ToString("F1")%
                                            </span>
                                            <small class="text-muted">
                                                @result.Score/@result.MaxScore
                                            </small>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="small">@duration</span>
                                    </td>
                                    <td>
                                        <a asp-action="OrthoeopyResult" asp-route-id="@result.Id"
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Подробно
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    @if (ViewBag.TestType == null || ViewBag.TestType == "regular")
    {
        @if (Model.RegularResults.Any())
        {
            <div class="mb-5">
                <h4 class="mb-3">
                    <i class="fas fa-list-ul text-success"></i> Классические тесты
                </h4>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Тест</th>
                                <th>Тип</th>
                                <th>Попытка</th>
                                <th>Результат</th>
                                <th>Баллы</th>
                                <th>Дата</th>
                                <th>Время</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var result in Model.RegularResults)
                            {
                                var duration = result.CompletedAt.HasValue 
                                    ? result.CompletedAt.Value - result.StartedAt 
                                    : TimeSpan.Zero;

                                <tr>
                                    <td>
                                        <strong>@result.RegularTest.Title</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">
                                            @switch (result.RegularTest.Type)
                                            {
                                                case TestType.Practice:
                                                    <i class="fas fa-dumbbell"></i> <text>Практика</text>
                                                    break;
                                                case TestType.Quiz:
                                                    <i class="fas fa-question-circle"></i> <text>Викторина</text>
                                                    break;
                                                case TestType.Exam:
                                                    <i class="fas fa-graduation-cap"></i> <text>Экзамен</text>
                                                    break;
                                                case TestType.Homework:
                                                    <i class="fas fa-home"></i> <text>ДЗ</text>
                                                    break;
                                            }
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-info">
                                            Попытка @result.AttemptNumber
                                        </span>
                                    </td>
                                    <td>
                                        <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") fs-6">
                                            @result.Percentage.ToString("F1")%
                                        </span>
                                    </td>
                                    <td>
                                        <strong>@result.Score/@result.MaxScore</strong>
                                    </td>
                                    <td>
                                        <small>@result.CompletedAt?.ToString("dd.MM.yyyy HH:mm")</small>
                                    </td>
                                    <td>
                                        <small>@($"{duration.Minutes:D2}:{duration.Seconds:D2}")</small>
                                    </td>
                                    <td>
                                        <a asp-action="Result" asp-route-id="@result.Id" 
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Просмотр
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    }
}
