@model OnlineTutor2.ViewModels.StudentTestHistoryViewModel
@{
    ViewData["Title"] = "История прохождения тестов";
    var testType = ViewBag.TestType as string;
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="fas fa-history text-primary"></i> История прохождения</h2>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i>
            <span class="d-none d-md-inline">К доступным тестам</span>
            <span class="d-md-none">Назад</span>
        </a>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">

        <div class="d-none d-md-block">
            <div class="btn-group w-100" role="group">
                <a asp-action="History"
                   class="btn btn-@(string.IsNullOrEmpty(testType) ? "primary" : "outline-primary")">
                    <i class="fas fa-list"></i> Все тесты
                </a>
                <a asp-action="History" asp-route-testType="spelling"
                   class="btn btn-@(testType == "spelling" ? "primary" : "outline-primary")">
                    <i class="fas fa-spell-check"></i> Орфография
                </a>
                <a asp-action="History" asp-route-testType="punctuation"
                   class="btn btn-@(testType == "punctuation" ? "warning" : "outline-warning")">
                    <i class="fas fa-quote-right"></i> Пунктуация
                </a>
                <a asp-action="History" asp-route-testType="orthoepy"
                   class="btn btn-@(testType == "orthoepy" ? "success" : "outline-success")">
                    <i class="fas fa-volume-up"></i> Орфоэпия
                </a>
                <a asp-action="History" asp-route-testType="regular"
                   class="btn btn-@(testType == "regular" ? "info" : "outline-info")">
                    <i class="fas fa-list-ul"></i> Классические
                </a>
            </div>
        </div>


        <div class="d-md-none">
            <div class="d-grid gap-2">
                <a asp-action="History"
                   class="btn btn-@(string.IsNullOrEmpty(testType) ? "primary" : "outline-primary")">
                    <i class="fas fa-list"></i> Все тесты
                </a>
                <a asp-action="History" asp-route-testType="spelling"
                   class="btn btn-@(testType == "spelling" ? "primary" : "outline-primary")">
                    <i class="fas fa-spell-check"></i> Орфография
                </a>
                <a asp-action="History" asp-route-testType="punctuation"
                   class="btn btn-@(testType == "punctuation" ? "warning" : "outline-warning")">
                    <i class="fas fa-quote-right"></i> Пунктуация
                </a>
                <a asp-action="History" asp-route-testType="orthoepy"
                   class="btn btn-@(testType == "orthoepy" ? "success" : "outline-success")">
                    <i class="fas fa-volume-up"></i> Орфоэпия
                </a>
                <a asp-action="History" asp-route-testType="regular"
                   class="btn btn-@(testType == "regular" ? "info" : "outline-info")">
                    <i class="fas fa-list-ul"></i> Классические
                </a>
            </div>
        </div>
    </div>
</div>


@if (!Model.SpellingResults.Any() && !Model.PunctuationResults.Any() && !Model.OrthoeopyResults.Any() && !Model.RegularResults.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">История пуста</h4>
        <p class="text-muted">Вы еще не проходили тесты</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-play"></i> Пройти первый тест
        </a>
    </div>
}
else
{

    <div class="row mb-4 g-3">
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="text-primary mb-1">@(Model.SpellingResults.Count() + Model.PunctuationResults.Count() + Model.OrthoeopyResults.Count() + Model.RegularResults.Count())</h4>
                    <small class="text-muted">Тестов пройдено</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    @{
                        var avgPercentage = 0.0;
                        var allPercentages = new List<double>();
                        allPercentages.AddRange(Model.SpellingResults.Select(r => r.Percentage));
                        allPercentages.AddRange(Model.PunctuationResults.Select(r => r.Percentage));
                        allPercentages.AddRange(Model.OrthoeopyResults.Select(r => r.Percentage));
                        allPercentages.AddRange(Model.RegularResults.Select(r => r.Percentage));

                        if (allPercentages.Any())
                        {
                            avgPercentage = allPercentages.Average();
                        }
                    }
                    <h4 class="text-success mb-1">@avgPercentage.ToString("F1")%</h4>
                    <small class="text-muted">Средний результат</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    @{
                        var maxPercentage = 0.0;
                        if (allPercentages?.Any() == true)
                        {
                            maxPercentage = allPercentages.Max();
                        }
                    }
                    <h4 class="text-info mb-1">@maxPercentage.ToString("F1")%</h4>
                    <small class="text-muted">Лучший результат</small>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="card text-center h-100 shadow-sm">
                <div class="card-body">
                    <h4 class="text-warning mb-1">@(Model.SpellingResults.Sum(r => r.Score) + Model.PunctuationResults.Sum(r => r.Score) + Model.OrthoeopyResults.Sum(r => r.Score) + Model.RegularResults.Sum(r => r.Score))</h4>
                    <small class="text-muted">Всего баллов</small>
                </div>
            </div>
        </div>
    </div>


    @if (Model.SpellingResults.Any() && (string.IsNullOrEmpty(testType) || testType == "spelling"))
    {
        <div class="mb-5">
            <h4 class="mb-3">
                <i class="fas fa-spell-check text-primary"></i> Тесты по орфографии
            </h4>

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="mobile-visible" style="width: 30%;">Тест</th>
                            <th class="d-none d-md-table-cell" style="width: 15%;">Дата</th>
                            <th class="mobile-visible text-center" style="width: 12%;">
                                <span class="d-none d-md-inline">Попытка</span>
                                <span class="d-md-none">Попытка</span>
                            </th>
                            <th class="mobile-visible text-center" style="width: 15%;">Результат</th>
                            <th class="d-none d-md-table-cell text-center" style="width: 10%;">Время</th>
                            <th class="mobile-visible text-center" style="width: 18%;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.SpellingResults)
                        {
                            var duration = result.CompletedAt.HasValue
                            ? (result.CompletedAt.Value - result.StartedAt).ToString(@"mm\:ss")
                            : "-";

                            <tr>
                                <td class="mobile-visible">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-spell-check text-primary me-2 d-none d-md-inline"></i>
                                        <div>
                                            <strong class="d-block">@result.SpellingTest.Title</strong>
                                            <small class="text-muted d-md-none">
                                                @result.CompletedAt?.ToString("dd.MM.yy HH:mm")
                                            </small>
                                            <small class="text-muted d-none d-md-block">
                                                Вопросов: @result.SpellingTest.SpellingQuestions.Count
                                            </small>
                                        </div>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell">
                                    <div>
                                        @result.CompletedAt?.ToString("dd.MM.yyyy")
                                        <br>
                                        <small class="text-muted">
                                            @result.CompletedAt?.ToString("HH:mm")
                                        </small>
                                    </div>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-info rounded-pill">
                                        @result.AttemptNumber
                                    </span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") rounded-pill">
                                        @result.Percentage.ToString("F1")%
                                    </span>
                                    <small class="text-muted d-none d-md-block mt-1">
                                        @result.Score/@result.MaxScore
                                    </small>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    <span class="small">@duration</span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <a asp-action="SpellingResult" asp-route-id="@result.Id"
                                       class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                        <span class="d-none d-md-inline">Подробно</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }


    @if (Model.PunctuationResults.Any() && (string.IsNullOrEmpty(testType) || testType == "punctuation"))
    {
        <div class="mb-5">
            <h4 class="mb-3">
                <i class="fas fa-quote-right text-warning"></i> Тесты по пунктуации
            </h4>

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="mobile-visible" style="width: 30%;">Тест</th>
                            <th class="d-none d-md-table-cell" style="width: 15%;">Дата</th>
                            <th class="mobile-visible text-center" style="width: 12%;">
                                <span class="d-none d-md-inline">Попытка</span>
                                <span class="d-md-none">Попытка</span>
                            </th>
                            <th class="mobile-visible text-center" style="width: 15%;">Результат</th>
                            <th class="d-none d-md-table-cell text-center" style="width: 10%;">Время</th>
                            <th class="mobile-visible text-center" style="width: 18%;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.PunctuationResults)
                        {
                            var duration = result.CompletedAt.HasValue
                            ? (result.CompletedAt.Value - result.StartedAt).ToString(@"mm\:ss")
                            : "-";

                            <tr>
                                <td class="mobile-visible">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-quote-right text-warning me-2 d-none d-md-inline"></i>
                                        <div>
                                            <strong class="d-block">@result.PunctuationTest.Title</strong>
                                            <small class="text-muted d-md-none">
                                                @result.CompletedAt?.ToString("dd.MM.yy HH:mm")
                                            </small>
                                            <small class="text-muted d-none d-md-block">
                                                Вопросов: @result.PunctuationTest.PunctuationQuestions.Count
                                            </small>
                                        </div>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell">
                                    <div>
                                        @result.CompletedAt?.ToString("dd.MM.yyyy")
                                        <br>
                                        <small class="text-muted">
                                            @result.CompletedAt?.ToString("HH:mm")
                                        </small>
                                    </div>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-info rounded-pill">
                                        @result.AttemptNumber
                                    </span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") rounded-pill">
                                        @result.Percentage.ToString("F1")%
                                    </span>
                                    <small class="text-muted d-none d-md-block mt-1">
                                        @result.Score/@result.MaxScore
                                    </small>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    <span class="small">@duration</span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <a asp-action="PunctuationResult" asp-route-id="@result.Id"
                                       class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                        <span class="d-none d-md-inline">Подробно</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }


    @if (Model.OrthoeopyResults.Any() && (string.IsNullOrEmpty(testType) || testType == "orthoepy"))
    {
        <div class="mb-5">
            <h4 class="mb-3">
                <i class="fas fa-volume-up text-success"></i> Тесты по орфоэпии
            </h4>

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="mobile-visible" style="width: 30%;">Тест</th>
                            <th class="d-none d-md-table-cell" style="width: 15%;">Дата</th>
                            <th class="mobile-visible text-center" style="width: 12%;">
                                <span class="d-none d-md-inline">Попытка</span>
                                <span class="d-md-none">Попытка</span>
                            </th>
                            <th class="mobile-visible text-center" style="width: 15%;">Результат</th>
                            <th class="d-none d-md-table-cell text-center" style="width: 10%;">Время</th>
                            <th class="mobile-visible text-center" style="width: 18%;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.OrthoeopyResults)
                        {
                            var duration = result.CompletedAt.HasValue
                            ? (result.CompletedAt.Value - result.StartedAt).ToString(@"mm\:ss")
                            : "-";

                            <tr>
                                <td class="mobile-visible">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-volume-up text-success me-2 d-none d-md-inline"></i>
                                        <div>
                                            <strong class="d-block">@result.OrthoeopyTest.Title</strong>
                                            <small class="text-muted d-md-none">
                                                @result.CompletedAt?.ToString("dd.MM.yy HH:mm")
                                            </small>
                                            <small class="text-muted d-none d-md-block">
                                                Вопросов: @result.OrthoeopyTest.OrthoeopyQuestions.Count
                                            </small>
                                        </div>
                                    </div>
                                </td>

                                <td class="d-none d-md-table-cell">
                                    <div>
                                        @result.CompletedAt?.ToString("dd.MM.yyyy")
                                        <br>
                                        <small class="text-muted">
                                            @result.CompletedAt?.ToString("HH:mm")
                                        </small>
                                    </div>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-info rounded-pill">
                                        @result.AttemptNumber
                                    </span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") rounded-pill">
                                        @result.Percentage.ToString("F1")%
                                    </span>
                                    <small class="text-muted d-none d-md-block mt-1">
                                        @result.Score/@result.MaxScore
                                    </small>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    <span class="small">@duration</span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <a asp-action="OrthoeopyResult" asp-route-id="@result.Id"
                                       class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                        <span class="d-none d-md-inline">Подробно</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }


    @if (Model.RegularResults.Any() && (string.IsNullOrEmpty(testType) || testType == "regular"))
    {
        <div class="mb-5">
            <h4 class="mb-3">
                <i class="fas fa-list-ul text-info"></i> Классические тесты
            </h4>

            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-light">
                        <tr>
                            <th class="mobile-visible" style="width: 30%;">Тест</th>
                            <th class="d-none d-md-table-cell text-center" style="width: 8%;">Тип</th>
                            <th class="d-none d-md-table-cell" style="width: 15%;">Дата</th>
                            <th class="mobile-visible text-center" style="width: 12%;">
                                <span class="d-none d-md-inline">Попытка</span>
                                <span class="d-md-none">Попытка</span>
                            </th>
                            <th class="mobile-visible text-center" style="width: 15%;">Результат</th>
                            <th class="d-none d-md-table-cell text-center" style="width: 10%;">Время</th>
                            <th class="mobile-visible text-center" style="width: 18%;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var result in Model.RegularResults)
                        {
                            var duration = result.CompletedAt.HasValue
                            ? result.CompletedAt.Value - result.StartedAt
                            : TimeSpan.Zero;

                            <tr>
                                <td class="mobile-visible">
                                    <div class="d-flex align-items-center">
                                        <i class="fas fa-list-ul text-info me-2 d-none d-md-inline"></i>
                                        <div>
                                            <strong class="d-block">@result.RegularTest.Title</strong>
                                            <small class="text-muted d-md-none">
                                                @switch (result.RegularTest.Type)
                                                {
                                                    case TestType.Practice:
                                                        <i class="fas fa-dumbbell" title="Практика"></i>
                                                        break;
                                                    case TestType.Quiz:
                                                        <i class="fas fa-question-circle" title="Квиз"></i>
                                                        break;
                                                    case TestType.Exam:
                                                        <i class="fas fa-graduation-cap" title="Экзамен"></i>
                                                        break;
                                                    case TestType.Homework:
                                                        <i class="fas fa-home" title="ДЗ"></i>
                                                        break;
                                                }
                                                @result.CompletedAt?.ToString("dd.MM.yy HH:mm")
                                            </small>
                                        </div>
                                    </div>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    <span class="badge bg-light text-dark">
                                        @switch (result.RegularTest.Type)
                                        {
                                            case TestType.Practice:
                                                <i class="fas fa-dumbbell" title="Практика"></i>
                                                break;
                                            case TestType.Quiz:
                                                <i class="fas fa-question-circle" title="Квиз"></i>
                                                break;
                                            case TestType.Exam:
                                                <i class="fas fa-graduation-cap" title="Экзамен"></i>
                                                break;
                                            case TestType.Homework:
                                                <i class="fas fa-home" title="ДЗ"></i>
                                                break;
                                        }
                                    </span>
                                </td>

                                <td class="d-none d-md-table-cell">
                                    <small>@result.CompletedAt?.ToString("dd.MM.yyyy HH:mm")</small>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-info rounded-pill">
                                        @result.AttemptNumber
                                    </span>
                                </td>

                                <td class="text-center mobile-visible">
                                    <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") rounded-pill">
                                        @result.Percentage.ToString("F1")%
                                    </span>
                                    <small class="text-muted d-none d-md-block mt-1">
                                        @result.Score/@result.MaxScore
                                    </small>
                                </td>

                                <td class="text-center d-none d-md-table-cell">
                                    <small>@($"{duration.Minutes:D2}:{duration.Seconds:D2}")</small>
                                </td>

                                <td class="text-center mobile-visible">
                                    <a asp-action="Result" asp-route-id="@result.Id"
                                       class="btn btn-outline-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                        <span class="d-none d-md-inline">Просмотр</span>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
}
