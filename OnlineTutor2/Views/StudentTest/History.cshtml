@model OnlineTutor2.ViewModels.StudentTestHistoryViewModel
@{
    ViewData["Title"] = "История прохождения тестов";
    var testType = ViewBag.TestType as string;
}


<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="mb-1"><i class="fas fa-history text-primary"></i> История прохождения</h2>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="fas fa-arrow-left"></i>
            <span class="d-none d-md-inline">К доступным тестам</span>
            <span class="d-md-none">Назад</span>
        </a>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">

        <div class="d-none d-md-block">
            <div class="btn-group w-100" role="group">
                <a asp-action="History"
                   class="btn btn-@(string.IsNullOrEmpty(testType) ? "primary" : "outline-primary")">
                    <i class="fas fa-list"></i> Все тесты
                </a>
                <a asp-action="History" asp-route-testType="spelling"
                   class="btn btn-@(testType == "spelling" ? "primary" : "outline-primary")">
                    <i class="fas fa-spell-check"></i> Орфография
                </a>
                <a asp-action="History" asp-route-testType="punctuation"
                   class="btn btn-@(testType == "punctuation" ? "warning" : "outline-warning")">
                    <i class="fas fa-quote-right"></i> Пунктуация
                </a>
                <a asp-action="History" asp-route-testType="orthoepy"
                   class="btn btn-@(testType == "orthoepy" ? "success" : "outline-success")">
                    <i class="fas fa-volume-up"></i> Орфоэпия
                </a>
                <a asp-action="History" asp-route-testType="regular"
                   class="btn btn-@(testType == "regular" ? "info" : "outline-info")">
                    <i class="fas fa-list-ul"></i> Классические
                </a>
            </div>
        </div>


        <div class="d-md-none">
            <div class="d-grid gap-2">
                <a asp-action="History"
                   class="btn btn-@(string.IsNullOrEmpty(testType) ? "primary" : "outline-primary")">
                    <i class="fas fa-list"></i> Все тесты
                </a>
                <a asp-action="History" asp-route-testType="spelling"
                   class="btn btn-@(testType == "spelling" ? "primary" : "outline-primary")">
                    <i class="fas fa-spell-check"></i> Орфография
                </a>
                <a asp-action="History" asp-route-testType="punctuation"
                   class="btn btn-@(testType == "punctuation" ? "warning" : "outline-warning")">
                    <i class="fas fa-quote-right"></i> Пунктуация
                </a>
                <a asp-action="History" asp-route-testType="orthoepy"
                   class="btn btn-@(testType == "orthoepy" ? "success" : "outline-success")">
                    <i class="fas fa-volume-up"></i> Орфоэпия
                </a>
                <a asp-action="History" asp-route-testType="regular"
                   class="btn btn-@(testType == "regular" ? "info" : "outline-info")">
                    <i class="fas fa-list-ul"></i> Классические
                </a>
            </div>
        </div>
    </div>
</div>


@if (!Model.SpellingResults.Any() && !Model.PunctuationResults.Any() && !Model.OrthoeopyResults.Any() && !Model.RegularResults.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-clipboard-list text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">История пуста</h4>
        <p class="text-muted">Вы еще не проходили тесты</p>
        <a asp-action="Index" class="btn btn-primary">
            <i class="fas fa-play"></i> Пройти первый тест
        </a>
    </div>
}
