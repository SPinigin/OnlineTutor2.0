                                            </td>
                                            <td>
                                                <small>@($"{duration.Minutes:D2}:{duration.Seconds:D2}")</small>
                                            </td>
                                            <td>
                                                <a asp-action="Result" asp-route-id="@result.Id"
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-eye"></i> Просмотр
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>


            <div class="d-md-none">
                <div class="row g-3">
                    @foreach (var result in Model.RegularResults)
                    {
                        var duration = result.CompletedAt.HasValue
                        ? result.CompletedAt.Value - result.StartedAt
                        : TimeSpan.Zero;

                        <div class="col-12">
                            <div class="card shadow-sm hover-card">
                                <div class="card-header bg-info bg-opacity-10">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h6 class="mb-0 text-truncate me-2">
                                            <i class="fas fa-list-ul text-info"></i> @result.RegularTest.Title
                                        </h6>
                                        <span class="badge bg-light text-dark">
                                            @switch (result.RegularTest.Type)
                                            {
                                                case TestType.Practice:
                                                    <i class="fas fa-dumbbell"></i>
                                                    break;
                                                case TestType.Quiz:
                                                    <i class="fas fa-question-circle"></i>
                                                    break;
                                                case TestType.Exam:
                                                    <i class="fas fa-graduation-cap"></i>
                                                    break;
                                                case TestType.Homework:
                                                    <i class="fas fa-home"></i>
                                                    break;
                                            }
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <span class="badge bg-@(result.Percentage >= 80 ? "success" : result.Percentage >= 60 ? "warning" : "danger") fs-6">
                                            @result.Percentage.ToString("F1")%
                                        </span>
                                    </div>
                                    <div class="row g-2 mb-3">
                                        <div class="col-6">
                                            <div class="d-flex flex-column p-2 bg-light rounded">
                                                <small class="text-muted">Попытка:</small>
                                                <span class="badge bg-info">@result.AttemptNumber</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex flex-column p-2 bg-light rounded">
                                                <small class="text-muted">Баллы:</small>
                                                <strong class="small">@result.Score/@result.MaxScore</strong>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex flex-column p-2 bg-light rounded">
                                                <small class="text-muted">Дата:</small>
                                                <span class="small">@result.CompletedAt?.ToString("dd.MM.yyyy HH:mm")</span>
                                            </div>
                                        </div>
                                        <div class="col-6">
                                            <div class="d-flex flex-column p-2 bg-light rounded">
                                                <small class="text-muted">Время:</small>
                                                <span class="small">@($"{duration.Minutes:D2}:{duration.Seconds:D2}")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <a asp-action="Result" asp-route-id="@result.Id"
                                       class="btn btn-outline-info btn-sm w-100">
                                        <i class="fas fa-eye"></i> Просмотр
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
}
