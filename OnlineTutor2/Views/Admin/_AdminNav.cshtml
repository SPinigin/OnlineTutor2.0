<div class="card mb-4">
    <div class="card-body">
        <nav class="nav nav-pills nav-fill">
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
               asp-action="Index">
                <i class="fas fa-home"></i> Дашборд
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Users" ? "active" : "")"
               asp-action="Users">
                <i class="fas fa-users"></i> Пользователи
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Teachers" ? "active" : "")"
               asp-action="Teachers">
                <i class="fas fa-chalkboard-teacher"></i> Учителя
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Classes" ? "active" : "")"
               asp-action="Classes">
                <i class="fas fa-graduation-cap"></i> Классы
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Tests" ? "active" : "")"
               asp-action="Tests">
                <i class="fas fa-tasks"></i> Тесты
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "TestResults" ? "active" : "")"
               asp-action="TestResults">
                <i class="fas fa-chart-line"></i> Результаты
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Statistics" ? "active" : "")"
               asp-action="Statistics">
                <i class="fas fa-chart-bar"></i> Статистика
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "AuditLogs" ? "active" : "")"
               asp-action="AuditLogs">
                <i class="fas fa-history"></i> Журнал
            </a>
            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "SystemInfo" ? "active" : "")"
               asp-action="SystemInfo">
                <i class="fas fa-server"></i> Система
            </a>
        </nav>
    </div>
</div>

@section Styles {
    <style>
        .nav-pills .nav-link {
            color: #495057;
            border-radius: 0.25rem;
            transition: all 0.3s ease;
        }

            .nav-pills .nav-link:hover {
                background-color: #e9ecef;
                color: #007bff;
            }

            .nav-pills .nav-link.active {
                background-color: #007bff;
                color: white;
            }

            .nav-pills .nav-link i {
                margin-right: 0.25rem;
            }

        @@media (max-width: 768px) {
            .nav-pills {
                flex-direction: column;
            }

                .nav-pills .nav-link {
                    margin-bottom: 0.5rem;
                }
        }
    </style>
}
