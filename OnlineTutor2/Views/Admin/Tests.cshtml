@model List<OnlineTutor2.ViewModels.AdminTestViewModel>
@{
    ViewData["Title"] = "Управление тестами";
}

@await Html.PartialAsync("_AdminNav")

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-tasks text-warning"></i> Управление тестами</h2>
        <p class="text-muted">Всего тестов: <strong>@Model.Count</strong></p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> К дашборду
        </a>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">
        <div class="btn-group w-100" role="group">
            <input type="radio" class="btn-check" name="typeFilter" id="filterAll" checked>
            <label class="btn btn-outline-primary" for="filterAll" onclick="filterTests('all')">
                <i class="fas fa-list"></i> Все (@Model.Count)
            </label>

            <input type="radio" class="btn-check" name="typeFilter" id="filterRegular">
            <label class="btn btn-outline-success" for="filterRegular" onclick="filterTests('Обычный')">
                <i class="fas fa-list-ul"></i> Классические (@Model.Count(t => t.Type == "Обычный"))
            </label>

            <input type="radio" class="btn-check" name="typeFilter" id="filterSpelling">
            <label class="btn btn-outline-primary" for="filterSpelling" onclick="filterTests('Орфография')">
                <i class="fas fa-spell-check"></i> Орфография (@Model.Count(t => t.Type == "Орфография"))
            </label>

            <input type="radio" class="btn-check" name="typeFilter" id="filterPunctuation">
            <label class="btn btn-outline-danger" for="filterPunctuation" onclick="filterTests('Пунктуация')">
                <i class="fas fa-quote-right"></i> Пунктуация (@Model.Count(t => t.Type == "Пунктуация"))
            </label>

            <input type="radio" class="btn-check" name="typeFilter" id="filterOrthoeopy">
            <label class="btn btn-outline-warning" for="filterOrthoeopy" onclick="filterTests('Орфоэпия')">
                <i class="fas fa-volume-up"></i> Орфоэпия (@Model.Count(t => t.Type == "Орфоэпия"))
            </label>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Название</th>
                            <th>Тип</th>
                            <th>Учитель</th>
                            <th>Класс</th>
                            <th class="text-center">Вопросы</th>
                            <th class="text-center">Результаты</th>
                            <th>Создан</th>
                            <th>Статус</th>
                            <th class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody id="testsTableBody">
                        @foreach (var test in Model)
                        {
                            var typeBadge = test.Type switch
                            {
                                "Орфография" => "primary",
                                "Обычный" => "success",
                                "Пунктуация" => "danger",
                                "Орфоэпия" => "warning",
                                _ => "secondary"
                            };

                            var typeIcon = test.Type switch
                            {
                                "Орфография" => "spell-check",
                                "Обычный" => "list-ul",
                                "Пунктуация" => "quote-right",
                                "Орфоэпия" => "volume-up",
                                _ => "tasks"
                            };

                            <tr class="test-row" data-type="@test.Type">
                                <td>
                                    <strong>@test.Title</strong>
                                </td>
                                <td>
                                    <span class="badge bg-@typeBadge">
                                        <i class="fas fa-@typeIcon"></i> @test.Type
                                    </span>
                                </td>
                                <td>
                                    <i class="fas fa-chalkboard-teacher text-muted"></i>
                                    @test.TeacherName
                                </td>
                                <td>
                                    @if (test.ClassName == "Все ученики")
                                    {
                                        <span class="text-muted">
                                            <i class="fas fa-globe"></i> @test.ClassName
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-graduation-cap"></i> @test.ClassName
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-secondary">@test.QuestionsCount</span>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-info">@test.ResultsCount</span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i>
                                        @test.CreatedAtFormatted
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-@test.StatusBadge">
                                        @test.StatusText
                                    </span>
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-controller="@test.ControllerName"
                                           asp-action="Details"
                                           asp-route-id="@test.Id"
                                           class="btn btn-outline-primary"
                                           title="Просмотр">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        @{
                                            var deleteAction = test.Type switch
                                            {
                                                "Орфография" => "DeleteSpellingTest",
                                                "Обычный" => "DeleteRegularTest",
                                                "Пунктуация" => "DeletePunctuationTest",
                                                "Орфоэпия" => "DeleteOrthoeopyTest",
                                                _ => "DeleteTest"
                                            };
                                        }

                                        <form asp-action="@deleteAction" asp-route-id="@test.Id"
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('Удалить тест «@test.Title»?\n\nВопросов: @test.QuestionsCount\nРезультатов: @test.ResultsCount\n\nВсе данные будут удалены!')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-outline-danger"
                                                    title="Удалить">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i>
                Тесты не найдены
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        function filterTests(type) {
            const rows = document.querySelectorAll('.test-row');

            rows.forEach(row => {
                if (type === 'all') {
                    row.style.display = '';
                } else {
                    if (row.dataset.type === type) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                }
            });
        }
    </script>
}

@section Styles {
    <style>
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}
