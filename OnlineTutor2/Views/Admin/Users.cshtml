@model List<OnlineTutor2.ViewModels.AdminUserViewModel>
@{
    ViewData["Title"] = "Управление пользователями";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-users text-primary"></i> Управление пользователями</h2>
        <p class="text-muted">Всего пользователей: <strong>@Model.Count</strong></p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> К дашборду
        </a>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-search"></i> Поиск
                </label>
                <input type="text" name="searchString" class="form-control"
                       value="@ViewBag.CurrentFilter"
                       placeholder="Имя, фамилия или email...">
            </div>

            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-user-tag"></i> Роль
                </label>
                <select name="roleFilter" class="form-select">
                    <option value="">Все роли</option>
                    @foreach (var role in ViewBag.Roles as List<string>)
                    {
                        <option value="@role" selected="@(role == ViewBag.RoleFilter)">
                            @role
                        </option>
                    }
                </select>
            </div>

            <div class="col-md-3">
                <label class="form-label">
                    <i class="fas fa-sort"></i> Сортировка
                </label>
                <select name="sortOrder" class="form-select">
                    <option value="">По фамилии (А-Я)</option>
                    <option value="name_desc" selected="@(ViewBag.CurrentSort == "name_desc")">
                        По фамилии (Я-А)
                    </option>
                    <option value="Email" selected="@(ViewBag.CurrentSort == "Email")">
                        По email (А-Я)
                    </option>
                    <option value="email_desc" selected="@(ViewBag.CurrentSort == "email_desc")">
                        По email (Я-А)
                    </option>
                    <option value="Date" selected="@(ViewBag.CurrentSort == "Date")">
                        По дате (старые)
                    </option>
                    <option value="date_desc" selected="@(ViewBag.CurrentSort == "date_desc")">
                        По дате (новые)
                    </option>
                </select>
            </div>

            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-100">
                    <i class="fas fa-filter"></i> Применить
                </button>
            </div>
        </form>
    </div>
</div>


<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ФИО</th>
                            <th>Email</th>
                            <th>Роль</th>
                            <th>Дата регистрации</th>
                            <th>Статус</th>
                            <th class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userVm in Model)
                        {
                            var user = userVm.User;
                            <tr>
                                <td>
                                    <strong>@user.FullName</strong>
                                    @if (userVm.IsAdmin)
                                    {
                                        <span class="badge bg-danger ms-2">
                                            <i class="fas fa-crown"></i> Админ
                                        </span>
                                    }
                                </td>
                                <td>
                                    <i class="fas fa-envelope text-muted"></i>
                                    @user.Email
                                </td>
                                <td>
                                    @if (userVm.IsTeacher)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-chalkboard-teacher"></i> Учитель
                                        </span>
                                    }
                                    @if (userVm.IsStudent)
                                    {
                                        <span class="badge bg-info">
                                            <i class="fas fa-user-graduate"></i> Ученик
                                        </span>
                                    }
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="fas fa-calendar"></i>
                                        @user.CreatedAt.ToString("dd.MM.yyyy")
                                    </small>
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">
                                            <i class="fas fa-check-circle"></i> Активен
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">
                                            <i class="fas fa-ban"></i> Заблокирован
                                        </span>
                                    }
                                </td>
                                <td class="text-center">
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="UserDetails" asp-route-id="@user.Id"
                                           class="btn btn-outline-primary"
                                           title="Подробнее">
                                            <i class="fas fa-eye"></i>
                                        </a>

                                        <form asp-action="ToggleUserStatus" asp-route-id="@user.Id"
                                              method="post" class="d-inline"
                                              onsubmit="return confirm('@(user.IsActive ? "Заблокировать" : "Активировать") пользователя @user.FullName?')">
                                            @Html.AntiForgeryToken()
                                            <button type="submit"
                                                    class="btn btn-outline-@(user.IsActive ? "warning" : "success")"
                                                    title="@(user.IsActive ? "Заблокировать" : "Активировать")">
                                                <i class="fas fa-@(user.IsActive ? "ban" : "check")"></i>
                                            </button>
                                        </form>

                                        @if (!userVm.IsAdmin)
                                        {
                                            <form asp-action="DeleteUser" asp-route-id="@user.Id"
                                                  method="post" class="d-inline"
                                                  onsubmit="return confirm('ВНИМАНИЕ! Удалить пользователя @user.FullName и все его данные?')">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger"
                                                        title="Удалить">
                                                    <i class="fas fa-trash-alt"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle"></i>
                Пользователи не найдены
            </div>
        }
    </div>
</div>

@section Styles {
    <style>
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }
        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
        .badge {
            font-weight: 500;
        }
    </style>
}
