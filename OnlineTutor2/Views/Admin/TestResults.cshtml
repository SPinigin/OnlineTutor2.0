@model List<OnlineTutor2.ViewModels.AdminTestResultViewModel>
@{
    ViewData["Title"] = "Результаты тестов";
}

@await Html.PartialAsync("_AdminNav")

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-chart-line text-info"></i> Результаты тестов</h2>
        <p class="text-muted">
            Всего результатов: <strong>@Model.Count</strong> |
            Завершено: <strong>@Model.Count(r => r.IsCompleted)</strong> |
            В процессе: <strong>@Model.Count(r => !r.IsCompleted)</strong>
        </p>
    </div>
    <div>
        <button type="button" class="btn btn-danger" onclick="confirmClearAllResults()">
            <i class="fas fa-trash-alt"></i> Очистить все результаты
        </button>
        <div class="btn-group">
            <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown">
                <i class="fas fa-file-export"></i> Экспорт
            </button>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item" asp-action="ExportTestResults" asp-route-format="excel">
                        <i class="fas fa-file-excel text-success"></i> Excel
                    </a>
                </li>
                <li>
                    <a class="dropdown-item" asp-action="ExportTestResults" asp-route-format="csv">
                        <i class="fas fa-file-csv text-success"></i> CSV
                    </a>
                </li>
            </ul>
        </div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> К дашборду
        </a>
    </div>
</div>


<div class="row mb-4">
    <div class="col-md-3">
        <div class="card text-center border-primary">
            <div class="card-body">
                <i class="fas fa-clipboard-check text-primary" style="font-size: 2rem;"></i>
                <h3 class="mt-2">@Model.Count</h3>
                <p class="text-muted mb-0">Всего результатов</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-success">
            <div class="card-body">
                <i class="fas fa-check-circle text-success" style="font-size: 2rem;"></i>
                <h3 class="mt-2">@Model.Count(r => r.IsCompleted)</h3>
                <p class="text-muted mb-0">Завершено</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-warning">
            <div class="card-body">
                <i class="fas fa-clock text-warning" style="font-size: 2rem;"></i>
                <h3 class="mt-2">@Model.Count(r => !r.IsCompleted)</h3>
                <p class="text-muted mb-0">В процессе</p>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card text-center border-info">
            <div class="card-body">
                <i class="fas fa-percentage text-info" style="font-size: 2rem;"></i>
                <h3 class="mt-2">
                    @if (Model.Any(r => r.IsCompleted))
                    {
                        @Model.Where(r => r.IsCompleted).Average(r => r.Percentage).ToString("F1")
                    }
                    else
                    {
                        @("0")
                    }
%
                </h3>
                <p class="text-muted mb-0">Средний балл</p>
            </div>
        </div>
    </div>
</div>


<div class="card mb-4">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-filter"></i> Тип теста
                </label>
                <select class="form-select" id="typeFilter" onchange="applyFilters()">
                    <option value="all">Все типы</option>
                    <option value="Орфография">Орфография</option>
                    <option value="Классический">Классические</option>
                    <option value="Пунктуация">Пунктуация</option>
                    <option value="Орфоэпия">Орфоэпия</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-tasks"></i> Статус
                </label>
                <select class="form-select" id="statusFilter" onchange="applyFilters()">
                    <option value="all">Все статусы</option>
                    <option value="completed">Завершенные</option>
                    <option value="in-progress">В процессе</option>
                </select>
            </div>

            <div class="col-md-4">
                <label class="form-label">
                    <i class="fas fa-sort"></i> Сортировка
                </label>
                <select class="form-select" id="sortFilter" onchange="sortResults()">
                    <option value="date-desc">По дате (новые)</option>
                    <option value="date-asc">По дате (старые)</option>
                    <option value="score-desc">По баллам (высокие)</option>
                    <option value="score-asc">По баллам (низкие)</option>
                </select>
            </div>
        </div>
    </div>
</div>


<div class="card">
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <thead>
                        <tr>
                            <th>Тест</th>
                            <th>Тип</th>
                            <th>Ученик</th>
                            <th class="text-center">Результат</th>
                            <th class="text-center">Процент</th>
                            <th>Начало</th>
                            <th>Завершение</th>
                            <th>Статус</th>
                            <th class="text-center">Действия</th>
                        </tr>
                    </thead>
                    <tbody id="resultsTableBody">
                        @foreach (var result in Model)
                        {
                            var typeBadge = result.TestType switch
                            {
                                "Орфография" => "primary",
                                "Классический" => "success",
                                "Пунктуация" => "danger",
                                "Орфоэпия" => "warning",
                                _ => "secondary"
                            };

                            var typeIcon = result.TestType switch
                            {
                                "Орфография" => "spell-check",
                                "Классический" => "list-ul",
                                "Пунктуация" => "quote-right",
                                "Орфоэпия" => "volume-up",
                                _ => "tasks"
                            };

                            <tr class="result-row"
                                data-type="@result.TestType"
                                data-status="@(result.IsCompleted ? "completed" : "in-progress")"
                                data-date="@result.StartedAt.Ticks"
                                data-score="@result.Percentage">
                                <td>
                                    <strong>@result.TestTitle</strong>
                                </td>
                                <td>
                                    <span class="badge bg-@typeBadge">
                                        <i class="fas fa-@typeIcon"></i> @result.TestType
                                    </span>
                                </td>
                                <td>
                                    <i class="fas fa-user-graduate text-muted"></i>
                                    @result.StudentName
                                </td>
                                <td class="text-center">
                                    <strong>@result.Score/@result.MaxScore</strong>
                                </td>
                                <td class="text-center">
                                    <span class="badge bg-@result.PercentageBadge fs-6">
                                        @result.Percentage.ToString("F1")%
                                    </span>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        <i class="fas fa-play-circle"></i>
                                        @result.StartedAtFormatted
                                    </small>
                                </td>
                                <td>
                                    <small class="text-muted">
                                        @if (result.IsCompleted)
                                        {
                                            <i class="fas fa-check-circle"></i>
                                            @result.CompletedAtFormatted
                                        }
                                        else
                                        {
                                            <i class="fas fa-clock"></i>
                                            <span class="text-warning">В процессе</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    <span class="badge bg-@result.StatusBadge">
                                        @result.StatusText
                                    </span>
                                </td>
                                <td class="text-center">
                                    @{
                                        var deleteAction = result.ResultType switch
                                        {
                                            "Spelling" => "DeleteSpellingResult",
                                            "Regular" => "DeleteRegularResult",
                                            "Punctuation" => "DeletePunctuationResult",
                                            "Orthoeopy" => "DeleteOrthoeopyResult",
                                            _ => "DeleteResult"
                                        };
                                    }

                                    <form asp-action="@deleteAction" asp-route-id="@result.Id"
                                          method="post" class="d-inline"
                                          onsubmit="return confirm('Удалить результат теста «@result.TestTitle» ученика @result.StudentName?')">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-outline-danger btn-sm"
                                                title="Удалить">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-info-circle fa-2x mb-3"></i>
                <h5>Результаты тестов отсутствуют</h5>
                <p class="text-muted">Ученики еще не прошли ни одного теста</p>
            </div>
        }
    </div>
</div>


<div class="modal fade" id="clearAllResultsModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-warning"></i>
                    <strong>ВНИМАНИЕ!</strong> Это действие удалит ВСЕ результаты тестов из системы.
                </div>
                <p>Будут удалены:</p>
                <ul>
                    <li>Все результаты тестов на орфографию: <strong>@Model.Count(r => r.TestType == "Орфография")</strong></li>
                    <li>Все результаты классических тестов: <strong>@Model.Count(r => r.TestType == "Классический")</strong></li>
                    <li>Все результаты тестов на пунктуацию: <strong>@Model.Count(r => r.TestType == "Пунктуация")</strong></li>
                    <li>Все результаты тестов на орфоэпию: <strong>@Model.Count(r => r.TestType == "Орфоэпия")</strong></li>
                    <li>Вся статистика прохождения</li>
                    <li>История ответов учеников</li>
                </ul>
                <p class="text-danger"><strong>Это действие нельзя отменить!</strong></p>

                <div class="mt-3">
                    <label class="form-label">
                        <strong>Для подтверждения введите: УДАЛИТЬ ВСЕ</strong>
                    </label>
                    <input type="text" id="confirmationText" class="form-control"
                           placeholder="УДАЛИТЬ ВСЕ" autocomplete="off" />
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> Отмена
                </button>
                <form asp-action="ClearAllResults" method="post" id="clearAllResultsForm">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger" id="confirmClearButton" disabled>
                        <i class="fas fa-trash-alt"></i> Удалить все результаты
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function applyFilters() {
            const typeFilter = document.getElementById('typeFilter').value;
            const statusFilter = document.getElementById('statusFilter').value;
            const rows = document.querySelectorAll('.result-row');

            rows.forEach(row => {
                let showType = typeFilter === 'all' || row.dataset.type === typeFilter;
                let showStatus = statusFilter === 'all' || row.dataset.status === statusFilter;

                row.style.display = (showType && showStatus) ? '' : 'none';
            });
        }

        function sortResults() {
            const sortValue = document.getElementById('sortFilter').value;
            const tbody = document.getElementById('resultsTableBody');
            const rows = Array.from(tbody.querySelectorAll('.result-row'));

            rows.sort((a, b) => {
                switch (sortValue) {
                    case 'date-desc':
                        return parseInt(b.dataset.date) - parseInt(a.dataset.date);
                    case 'date-asc':
                        return parseInt(a.dataset.date) - parseInt(b.dataset.date);
                    case 'score-desc':
                        return parseFloat(b.dataset.score) - parseFloat(a.dataset.score);
                    case 'score-asc':
                        return parseFloat(a.dataset.score) - parseFloat(b.dataset.score);
                    default:
                        return 0;
                }
            });

            rows.forEach(row => tbody.appendChild(row));
        }

        function confirmClearAllResults() {
            const modal = new bootstrap.Modal(document.getElementById('clearAllResultsModal'));
            modal.show();
        }

        // Обработка подтверждения очистки результатов
        document.addEventListener('DOMContentLoaded', function() {
            const confirmationText = document.getElementById('confirmationText');
            const confirmButton = document.getElementById('confirmClearButton');
            const expectedText = 'УДАЛИТЬ ВСЕ';

            if (confirmationText && confirmButton) {
                confirmationText.addEventListener('input', function() {
                    if (this.value.trim() === expectedText) {
                        confirmButton.disabled = false;
                    } else {
                        confirmButton.disabled = true;
                    }
                });

                document.getElementById('clearAllResultsForm').addEventListener('submit', function(e) {
                    if (confirmationText.value.trim() !== expectedText) {
                        e.preventDefault();
                        alert('Введите точный текст подтверждения');
                        return false;
                    }

                    if (!confirm('Вы ДЕЙСТВИТЕЛЬНО уверены? Это удалит ВСЕ результаты тестов!')) {
                        e.preventDefault();
                        return false;
                    }
                });
            }
        });
    </script>
}

@section Styles {
    <style>
        .table th {
            background-color: #f8f9fa;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }
    </style>
}
