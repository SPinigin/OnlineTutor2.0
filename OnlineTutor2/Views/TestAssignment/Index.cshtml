@model IEnumerable<OnlineTutor2.Models.TestAssignment>
@{
    ViewData["Title"] = "Управление заданиями";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-folder text-primary"></i> Управление заданиями</h2>
        <p class="text-muted">Группируйте тесты по заданиям для лучшей организации</p>
    </div>
    <div>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать задание
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-folder text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">У вас пока нет заданий</h4>
        <p class="text-muted">Создайте задание для группировки тестов</p>
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать первое задание
        </a>
    </div>
}
else
{
    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0" id="assignmentsTable">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 40px;"></th>
                            <th>Задание</th>
                            <th class="d-none d-md-table-cell">Категория</th>
                            <th class="text-center">Тесты</th>
                            <th class="d-none d-lg-table-cell">Создано</th>
                            <th class="text-center">Статус</th>
                            <th class="text-center" style="width: 150px;">Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var assignment in Model.OrderBy(a => a.TestCategoryId).ThenBy(a => a.AssignmentNumber))
                        {
                            var totalTests = assignment.SpellingTests.Count + 
                                           assignment.PunctuationTests.Count + 
                                           assignment.OrthoeopyTests.Count + 
                                           assignment.RegularTests.Count;
                            
                            <tr class="assignment-row" data-assignment-id="@assignment.Id">
                                <td class="align-middle">
                                    <button type="button" 
                                            class="btn btn-sm btn-link p-0 text-primary toggle-assignment" 
                                            data-assignment-id="@assignment.Id"
                                            title="Развернуть/Свернуть">
                                        <i class="fas fa-chevron-right toggle-icon" id="icon-@assignment.Id"></i>
                                    </button>
                                </td>
                                <td class="align-middle">
                                    <div>
                                        <strong>@assignment.Title</strong>
                                        @if (!string.IsNullOrEmpty(assignment.Description))
                                        {
                                            <br>
                                            <small class="text-muted">@assignment.Description</small>
                                        }
                                    </div>
                                </td>
                                <td class="d-none d-md-table-cell align-middle">
                                    @if (assignment.TestCategory != null)
                                    {
                                        <span class="badge bg-info">@assignment.TestCategory.Name</span>
                                    }
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-primary">@totalTests</span>
                                </td>
                                <td class="d-none d-lg-table-cell align-middle">
                                    <small class="text-muted">@assignment.CreatedAt.ToString("dd.MM.yyyy")</small>
                                </td>
                                <td class="text-center align-middle">
                                    <span class="badge bg-@(assignment.IsActive ? "success" : "secondary")">
                                        @(assignment.IsActive ? "Активно" : "Неактивно")
                                    </span>
                                </td>
                                <td class="text-center align-middle">
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a asp-action="Edit" asp-route-id="@assignment.Id" 
                                           class="btn btn-outline-primary" title="Редактировать">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@assignment.Id" 
                                           class="btn btn-outline-danger" title="Удалить">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            
                            @* Строки с тестами (скрыты по умолчанию) *@
                            @if (totalTests > 0)
                            {
                                @* Орфография *@
                                @foreach (var test in assignment.SpellingTests)
                                {
                                    <tr class="test-row assignment-@assignment.Id" style="display: none;">
                                        <td></td>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-primary">
                                                    <i class="fas fa-spell-check"></i>
                                                </span>
                                                <div>
                                                    <strong>@test.Title</strong>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@test.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <span class="badge bg-primary">Орфография</span>
                                        </td>
                                        <td class="text-center">
                                            <small class="text-muted">
                                                <i class="fas fa-question-circle"></i> 
                                                @(test.SpellingQuestions?.Count ?? 0)
                                            </small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            <small class="text-muted">@test.CreatedAt.ToString("dd.MM.yyyy")</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                @(test.IsActive ? "Активен" : "Неактивен")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="SpellingTest" asp-action="Details" asp-route-id="@test.Id"
                                               class="btn btn-sm btn-outline-primary" title="Открыть">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                
                                @* Пунктуация *@
                                @foreach (var test in assignment.PunctuationTests)
                                {
                                    <tr class="test-row assignment-@assignment.Id" style="display: none;">
                                        <td></td>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-info">
                                                    <i class="fas fa-paragraph"></i>
                                                </span>
                                                <div>
                                                    <strong>@test.Title</strong>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@test.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <span class="badge bg-info">Пунктуация</span>
                                        </td>
                                        <td class="text-center">
                                            <small class="text-muted">
                                                <i class="fas fa-question-circle"></i> 
                                                @(test.PunctuationQuestions?.Count ?? 0)
                                            </small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            <small class="text-muted">@test.CreatedAt.ToString("dd.MM.yyyy")</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                @(test.IsActive ? "Активен" : "Неактивен")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="PunctuationTest" asp-action="Details" asp-route-id="@test.Id"
                                               class="btn btn-sm btn-outline-primary" title="Открыть">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                
                                @* Орфоэпия *@
                                @foreach (var test in assignment.OrthoeopyTests)
                                {
                                    <tr class="test-row assignment-@assignment.Id" style="display: none;">
                                        <td></td>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-danger">
                                                    <i class="fas fa-volume-up"></i>
                                                </span>
                                                <div>
                                                    <strong>@test.Title</strong>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@test.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <span class="badge bg-danger">Орфоэпия</span>
                                        </td>
                                        <td class="text-center">
                                            <small class="text-muted">
                                                <i class="fas fa-question-circle"></i> 
                                                @(test.OrthoeopyQuestions?.Count ?? 0)
                                            </small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            <small class="text-muted">@test.CreatedAt.ToString("dd.MM.yyyy")</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                @(test.IsActive ? "Активен" : "Неактивен")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="OrthoeopyTest" asp-action="Details" asp-route-id="@test.Id"
                                               class="btn btn-sm btn-outline-primary" title="Открыть">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                                
                                @* Классические *@
                                @foreach (var test in assignment.RegularTests)
                                {
                                    <tr class="test-row assignment-@assignment.Id" style="display: none;">
                                        <td></td>
                                        <td class="ps-4">
                                            <div class="d-flex align-items-center gap-2">
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-question-circle"></i>
                                                </span>
                                                <div>
                                                    <strong>@test.Title</strong>
                                                    @if (!string.IsNullOrEmpty(test.Description))
                                                    {
                                                        <br>
                                                        <small class="text-muted">@test.Description</small>
                                                    }
                                                </div>
                                            </div>
                                        </td>
                                        <td class="d-none d-md-table-cell">
                                            <span class="badge bg-secondary">Классический</span>
                                        </td>
                                        <td class="text-center">
                                            <small class="text-muted">
                                                <i class="fas fa-question-circle"></i> 
                                                @(test.RegularQuestions?.Count ?? 0)
                                            </small>
                                        </td>
                                        <td class="d-none d-lg-table-cell">
                                            <small class="text-muted">@test.CreatedAt.ToString("dd.MM.yyyy")</small>
                                        </td>
                                        <td class="text-center">
                                            <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                                @(test.IsActive ? "Активен" : "Неактивен")
                                            </span>
                                        </td>
                                        <td class="text-center">
                                            <a asp-controller="RegularTest" asp-action="Details" asp-route-id="@test.Id"
                                               class="btn btn-sm btn-outline-primary" title="Открыть">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                @* Пустое сообщение, если нет тестов *@
                                <tr class="test-row assignment-@assignment.Id" style="display: none;">
                                    <td colspan="7" class="ps-4 text-muted text-center py-3">
                                        <i class="fas fa-info-circle"></i> В этом задании пока нет тестов
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Обработчики для сворачивания/разворачивания заданий
            document.querySelectorAll('.toggle-assignment').forEach(function(button) {
                button.addEventListener('click', function() {
                    var assignmentId = this.getAttribute('data-assignment-id');
                    toggleAssignment(assignmentId);
                });
            });
        });

        function toggleAssignment(assignmentId) {
            var rows = document.querySelectorAll('.assignment-' + assignmentId);
            var icon = document.getElementById('icon-' + assignmentId);
            
            if (!rows.length || !icon) return;
            
            var isVisible = rows[0].style.display !== 'none';
            
            rows.forEach(function(row) {
                row.style.display = isVisible ? 'none' : '';
            });
            
            if (isVisible) {
                icon.classList.remove('fa-chevron-down');
                icon.classList.add('fa-chevron-right');
            } else {
                icon.classList.remove('fa-chevron-right');
                icon.classList.add('fa-chevron-down');
            }
        }
    </script>
}
