@model List<OnlineTutor2.Models.RegularTest>
@{
    ViewData["Title"] = $"Тесты:{ViewBag.Category.Name}";
    var category = ViewBag.Category as OnlineTutor2.Models.TestCategory;
    var assignments = ViewBag.Assignments as List<OnlineTutor2.Models.TestAssignment> ?? new List<OnlineTutor2.Models.TestAssignment>();
    var testsByAssignment = ViewBag.TestsByAssignment as Dictionary<int, List<OnlineTutor2.Models.RegularTest>> ?? new Dictionary<int, List<OnlineTutor2.Models.RegularTest>>();
    var testsWithoutAssignment = ViewBag.TestsWithoutAssignment as List<OnlineTutor2.Models.RegularTest> ?? new List<OnlineTutor2.Models.RegularTest>();
    var activeTests = Model.Count(t => t.IsActive);
    var inactiveTests = Model.Count(t => !t.IsActive);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index"><i class="fas fa-tasks"></i> Тесты</a>
                </li>
                <li class="breadcrumb-item active">
                    <i class="@category.IconClass"></i> @category.Name
                </li>
            </ol>
        </nav>
        <h2>@category.Name</h2>
        @if (!string.IsNullOrEmpty(category.Description))
        {
            <p class="text-muted">@category.Description</p>
        }
    </div>
    <div>
        <a asp-controller="TestAssignment"
           asp-action="Create"
           asp-route-testCategoryId="@category.Id"
           class="btn btn-info me-2">
            <i class="fas fa-folder-plus"></i> Создать задание
        </a>
        <a asp-controller="RegularTest" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать тест
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-list-ul text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">У вас пока нет классических тестов</h4>
        <p class="text-muted">Создайте свой первый тест с вариантами ответов</p>
        <a asp-controller="RegularTest" asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Создать первый тест
        </a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="mb-0">
            <i class="fas fa-tasks"></i> Всего тестов: @Model.Count
        </h6>
        <div class="btn-group btn-group-sm" role="group">
            <button type="button" class="btn btn-outline-secondary active" onclick="filterTests('all')">
                Все (@Model.Count)
            </button>
            <button type="button" class="btn btn-outline-success" onclick="filterTests('active')">
                Активные (@activeTests)
            </button>
            <button type="button" class="btn btn-outline-secondary" onclick="filterTests('inactive')">
                Неактивные (@inactiveTests)
            </button>
        </div>
    </div>

    @* Отображение тестов по заданиям *@
    @foreach (var assignment in assignments)
    {
        @if (testsByAssignment.ContainsKey(assignment.Id) && testsByAssignment[assignment.Id].Any())
        {
            var assignmentTests = testsByAssignment[assignment.Id];
            <div class="card mb-4 assignment-group" data-assignment-id="@assignment.Id">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-folder"></i> Задание @assignment.AssignmentNumber: @assignment.Title
                        </h5>
                        <div>
                            <a asp-controller="TestAssignment" asp-action="Edit" asp-route-id="@assignment.Id" 
                               class="btn btn-sm btn-light me-2" title="Редактировать задание">
                                <i class="fas fa-edit"></i>
                            </a>
                            <span class="badge bg-light text-dark">@assignmentTests.Count тест(ов)</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(assignment.Description))
                    {
                        <small class="d-block mt-2">@assignment.Description</small>
                    }
                </div>
                <div class="card-body">
                    <div class="row">
                        @foreach (var test in assignmentTests)
                        {
                            <div class="col-md-6 col-lg-4 mb-4 test-card" data-status="@(test.IsActive ? "active" : "inactive")">
                <div class="card h-100 @(test.IsActive ? "" : "opacity-75")">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-list-ul text-success"></i> @test.Title
                        </h6>
                        <div>
                            <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                @(test.IsActive ? "Активный" : "Неактивный")
                            </span>
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        @if (!string.IsNullOrEmpty(test.Description))
                        {
                            <p class="card-text text-muted small mb-3">@test.Description</p>
                        }

                        <div class="mb-3">
                            <span class="badge bg-primary">
                                @switch (test.Type)
                                {
                                    case TestType.Practice:
                                        <i class="fas fa-dumbbell"></i> <text>Практика</text>
                                        break;
                                    case TestType.Quiz:
                                        <i class="fas fa-question-circle"></i> <text>Викторина</text>
                                        break;
                                    case TestType.Exam:
                                        <i class="fas fa-graduation-cap"></i> <text>Экзамен</text>
                                        break;
                                    case TestType.Homework:
                                        <i class="fas fa-home"></i> <text>Домашнее задание</text>
                                        break;
                                }
                            </span>
                            @* ✅ ИСПРАВЛЕНО: Отображение классов через many-to-many *@
                            @if (test.TestClasses != null && test.TestClasses.Any())
                            {
                                @foreach (var testClass in test.TestClasses)
                                {
                                    <span class="badge bg-info me-1">@testClass.Class.Name</span>
                                }
                            }
                            else
                            {
                                <span class="badge bg-secondary">Все классы</span>
                            }
                        </div>

                        
                        @{
                            var singleChoiceCount = test.RegularQuestions.Count(q => q.Type == QuestionType.SingleChoice);
                            var multipleChoiceCount = test.RegularQuestions.Count(q => q.Type == QuestionType.MultipleChoice);
                            var trueFalseCount = test.RegularQuestions.Count(q => q.Type == QuestionType.TrueFalse);
                        }
                        
                        @if (test.RegularQuestions.Any())
                        {
                            <div class="mb-3 small">
                                <div class="text-muted mb-1">Типы вопросов:</div>
                                @if (singleChoiceCount > 0)
                                {
                                    <span class="badge bg-primary me-1">
                                        <i class="fas fa-dot-circle"></i> Одиночный: @singleChoiceCount
                                    </span>
                                }
                                @if (multipleChoiceCount > 0)
                                {
                                    <span class="badge bg-success me-1">
                                        <i class="fas fa-check-square"></i> Множественный: @multipleChoiceCount
                                    </span>
                                }
                                @if (trueFalseCount > 0)
                                {
                                    <span class="badge bg-warning">
                                        <i class="fas fa-question-circle"></i> Верно/Неверно: @trueFalseCount
                                    </span>
                                }
                            </div>
                        }

                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <div class="d-flex flex-column">
                                    <span class="h6 text-success mb-0">@test.RegularQuestions.Count</span>
                                    <small class="text-muted">вопросов</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex flex-column">
                                    <span class="h6 text-info mb-0">@test.TimeLimit</span>
                                    <small class="text-muted">минут</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex flex-column">
                                    <span class="h6 text-warning mb-0">@test.RegularTestResults.Count</span>
                                    <small class="text-muted">прохождений</small>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <small class="text-muted d-block">
                                <i class="fas fa-calendar"></i> Создан: @test.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                            @if (test.StartDate.HasValue)
                            {
                                <small class="text-muted d-block">
                                    <i class="fas fa-play"></i> Начало: @test.StartDate.Value.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            }
                            @if (test.EndDate.HasValue)
                            {
                                <small class="text-muted d-block">
                                    <i class="fas fa-stop"></i> Окончание: @test.EndDate.Value.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-controller="RegularTest" asp-action="Details" asp-route-id="@test.Id" 
                               class="btn btn-outline-info btn-sm">
                                <i class="fas fa-eye"></i> Детали
                            </a>
                            <a asp-controller="RegularTest" asp-action="Edit" asp-route-id="@test.Id" 
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit"></i> Изменить
                            </a>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                        data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    @if (test.RegularQuestions.Any())
                                    {
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="fas fa-play"></i> Предварительный просмотр
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="fas fa-copy"></i> Дублировать
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a asp-controller="RegularTest" asp-action="Delete" asp-route-id="@test.Id" 
                                           class="dropdown-item text-danger">
                                            <i class="fas fa-trash"></i> Удалить
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    }

    @* Тесты без задания *@
    @if (testsWithoutAssignment.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-secondary text-white">
                <h5 class="mb-0">
                    <i class="fas fa-list"></i> Тесты без задания (@testsWithoutAssignment.Count)
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    @foreach (var test in testsWithoutAssignment)
                    {
                        <div class="col-md-6 col-lg-4 mb-4 test-card" data-status="@(test.IsActive ? "active" : "inactive")">
                            <div class="card h-100 @(test.IsActive ? "" : "opacity-75")">
                                <div class="card-header d-flex justify-content-between align-items-center">
                                    <h6 class="card-title mb-0">
                                        <i class="fas fa-list-ul text-success"></i> @test.Title
                                    </h6>
                                    <div>
                                        <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                            @(test.IsActive ? "Активный" : "Неактивный")
                                        </span>
                                    </div>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    @if (!string.IsNullOrEmpty(test.Description))
                                    {
                                        <p class="card-text text-muted small mb-3">@test.Description</p>
                                    }

                                    <div class="mb-3">
                                        <span class="badge bg-primary">
                                            @switch (test.Type)
                                            {
                                                case TestType.Practice:
                                                    <i class="fas fa-dumbbell"></i> <text>Практика</text>
                                                    break;
                                                case TestType.Quiz:
                                                    <i class="fas fa-question-circle"></i> <text>Викторина</text>
                                                    break;
                                                case TestType.Exam:
                                                    <i class="fas fa-graduation-cap"></i> <text>Экзамен</text>
                                                    break;
                                                case TestType.Homework:
                                                    <i class="fas fa-home"></i> <text>Домашнее задание</text>
                                                    break;
                                            }
                                        </span>
                                        @if (test.TestClasses != null && test.TestClasses.Any())
                                        {
                                            @foreach (var testClass in test.TestClasses)
                                            {
                                                <span class="badge bg-info me-1">@testClass.Class.Name</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Все классы</span>
                                        }
                                    </div>

                                    @{
                                        var singleChoiceCount = test.RegularQuestions.Count(q => q.Type == QuestionType.SingleChoice);
                                        var multipleChoiceCount = test.RegularQuestions.Count(q => q.Type == QuestionType.MultipleChoice);
                                        var trueFalseCount = test.RegularQuestions.Count(q => q.Type == QuestionType.TrueFalse);
                                    }
                                    
                                    @if (test.RegularQuestions.Any())
                                    {
                                        <div class="mb-3 small">
                                            <div class="text-muted mb-1">Типы вопросов:</div>
                                            @if (singleChoiceCount > 0)
                                            {
                                                <span class="badge bg-primary me-1">
                                                    <i class="fas fa-dot-circle"></i> Одиночный: @singleChoiceCount
                                                </span>
                                            }
                                            @if (multipleChoiceCount > 0)
                                            {
                                                <span class="badge bg-success me-1">
                                                    <i class="fas fa-check-square"></i> Множественный: @multipleChoiceCount
                                                </span>
                                            }
                                            @if (trueFalseCount > 0)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-question-circle"></i> Верно/Неверно: @trueFalseCount
                                                </span>
                                            }
                                        </div>
                                    }

                                    <div class="row text-center mb-3">
                                        <div class="col-4">
                                            <div class="d-flex flex-column">
                                                <span class="h6 text-success mb-0">@test.RegularQuestions.Count</span>
                                                <small class="text-muted">вопросов</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="d-flex flex-column">
                                                <span class="h6 text-info mb-0">@test.TimeLimit</span>
                                                <small class="text-muted">минут</small>
                                            </div>
                                        </div>
                                        <div class="col-4">
                                            <div class="d-flex flex-column">
                                                <span class="h6 text-warning mb-0">@test.RegularTestResults.Count</span>
                                                <small class="text-muted">прохождений</small>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mt-auto">
                                        <small class="text-muted d-block">
                                            <i class="fas fa-calendar"></i> Создан: @test.CreatedAt.ToString("dd.MM.yyyy")
                                        </small>
                                        @if (test.StartDate.HasValue)
                                        {
                                            <small class="text-muted d-block">
                                                <i class="fas fa-play"></i> Начало: @test.StartDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        }
                                        @if (test.EndDate.HasValue)
                                        {
                                            <small class="text-muted d-block">
                                                <i class="fas fa-stop"></i> Окончание: @test.EndDate.Value.ToString("dd.MM.yyyy HH:mm")
                                            </small>
                                        }
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="btn-group w-100" role="group">
                                        <a asp-controller="RegularTest" asp-action="Details" asp-route-id="@test.Id" 
                                           class="btn btn-outline-info btn-sm">
                                            <i class="fas fa-eye"></i> Детали
                                        </a>
                                        <a asp-controller="RegularTest" asp-action="Edit" asp-route-id="@test.Id" 
                                           class="btn btn-outline-primary btn-sm">
                                            <i class="fas fa-edit"></i> Изменить
                                        </a>
                                        <div class="btn-group" role="group">
                                            <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                                    data-bs-toggle="dropdown">
                                                <i class="fas fa-ellipsis-v"></i>
                                            </button>
                                            <ul class="dropdown-menu">
                                                @if (test.RegularQuestions.Any())
                                                {
                                                    <li>
                                                        <a class="dropdown-item" href="#">
                                                            <i class="fas fa-play"></i> Предварительный просмотр
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" href="#">
                                                            <i class="fas fa-copy"></i> Дублировать
                                                        </a>
                                                    </li>
                                                    <li><hr class="dropdown-divider"></li>
                                                }
                                                <li>
                                                    <a asp-controller="RegularTest" asp-action="Delete" asp-route-id="@test.Id" 
                                                       class="dropdown-item text-danger">
                                                        <i class="fas fa-trash"></i> Удалить
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        }
                    </div>
                </div>
            </div>
    }
}

@section Scripts {
    <script>
        function filterTests(status) {
            const cards = document.querySelectorAll('.test-card');
            const buttons = document.querySelectorAll('.btn-group .btn');

            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            cards.forEach(card => {
                if (status === 'all' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>
}
