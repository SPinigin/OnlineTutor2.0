@model IEnumerable<OnlineTutor2.Models.PunctuationTest>
@{
    ViewData["Title"] = $"{ViewBag.Category.Name} - Тесты";
    var category = ViewBag.Category as OnlineTutor2.Models.TestCategory;
    var activeTests = Model.Count(t => t.IsActive);
    var inactiveTests = Model.Count(t => !t.IsActive);
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a asp-action="Index"><i class="fas fa-tasks"></i> Тесты</a>
                </li>
                <li class="breadcrumb-item active">
                    <i class="@category.IconClass"></i> @category.Name
                </li>
            </ol>
        </nav>
        <h2>@category.Name</h2>
        @if (!string.IsNullOrEmpty(category.Description))
        {
            <p class="text-muted">@category.Description</p>
        }
    </div>
    <div>
        <a asp-controller="PunctuationTest" asp-action="Create" class="btn btn-warning">
            <i class="fas fa-plus"></i> Создать тест
        </a>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="@category.IconClass text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">У вас пока нет тестов на пунктуацию</h4>
        <p class="text-muted">Создайте свой первый тест для проверки знаний пунктуации</p>
        <a asp-controller="PunctuationTest" asp-action="Create" class="btn btn-warning">
            <i class="fas fa-plus"></i> Создать первый тест
        </a>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h6 class="mb-0">
            <i class="fas fa-tasks"></i> Всего тестов: @Model.Count()
        </h6>
        <div class="btn-group btn-group-sm" role="group">
            <button type="button" class="btn btn-outline-secondary active" onclick="filterTestsByStatus('all')">
                Все (@Model.Count())
            </button>
            <button type="button" class="btn btn-outline-success" onclick="filterTestsByStatus('active')">
                Активные (@activeTests)
            </button>
            <button type="button" class="btn btn-outline-secondary" onclick="filterTestsByStatus('inactive')">
                Неактивные (@inactiveTests)
            </button>
        </div>
    </div>

    <div class="row">
        @foreach (var test in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4 test-card" data-status="@(test.IsActive ? "active" : "inactive")">
                <div class="card h-100 @(test.IsActive ? "" : "opacity-75")">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h6 class="card-title mb-0">
                            <i class="fas fa-exclamation text-warning"></i> @test.Title
                        </h6>
                        <div>
                            <span class="badge bg-@(test.IsActive ? "success" : "secondary")">
                                @(test.IsActive ? "Активный" : "Неактивный")
                            </span>
                            @if (test.Class != null)
                            {
                                <span class="badge bg-info">@test.Class.Name</span>
                            }
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        @if (!string.IsNullOrEmpty(test.Description))
                        {
                            <p class="card-text text-muted small">@test.Description</p>
                        }

                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <div class="d-flex flex-column">
                                    <span class="h6 text-warning mb-0">@test.Questions.Count</span>
                                    <small class="text-muted">вопросов</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex flex-column">
                                    <span class="h6 text-info mb-0">@test.TimeLimit</span>
                                    <small class="text-muted">минут</small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex flex-column">
                                    <span class="h6 text-success mb-0">@test.TestResults.Count</span>
                                    <small class="text-muted">прохождений</small>
                                </div>
                            </div>
                        </div>

                        <div class="mt-auto">
                            <small class="text-muted d-block">
                                <i class="fas fa-calendar"></i> Создан: @test.CreatedAt.ToString("dd.MM.yyyy")
                            </small>
                            @if (test.StartDate.HasValue)
                            {
                                <small class="text-muted d-block">
                                    <i class="fas fa-play"></i> Начало: @test.StartDate.Value.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            }
                            @if (test.EndDate.HasValue)
                            {
                                <small class="text-muted d-block">
                                    <i class="fas fa-stop"></i> Окончание: @test.EndDate.Value.ToString("dd.MM.yyyy HH:mm")
                                </small>
                            }
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="btn-group w-100" role="group">
                            <a asp-controller="PunctuationTest" asp-action="Details" asp-route-id="@test.Id"
                               class="btn btn-outline-info btn-sm">
                                <i class="fas fa-eye"></i> Детали
                            </a>
                            <a asp-controller="PunctuationTest" asp-action="Edit" asp-route-id="@test.Id"
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit"></i> Изменить
                            </a>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-secondary btn-sm dropdown-toggle"
                                        data-bs-toggle="dropdown">
                                    <i class="fas fa-ellipsis-v"></i>
                                </button>
                                <ul class="dropdown-menu">
                                    @if (test.Questions.Any())
                                    {
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="fas fa-play"></i> Предварительный просмотр
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="#">
                                                <i class="fas fa-copy"></i> Дублировать
                                            </a>
                                        </li>
                                        <li><hr class="dropdown-divider"></li>
                                    }
                                    <li>
                                        <a asp-controller="PunctuationTest" asp-action="Delete" asp-route-id="@test.Id"
                                           class="dropdown-item text-danger">
                                            <i class="fas fa-trash"></i> Удалить
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}

@section Scripts {
    <script src="~/js/layout.js" asp-append-version="true"></script>
    <script>
        function filterTestsByStatus(status) {
            const cards = document.querySelectorAll('.test-card');
            const buttons = document.querySelectorAll('.btn-group .btn');

            // Обновляем активную кнопку
            buttons.forEach(btn => btn.classList.remove('active'));
            event.target.classList.add('active');

            // Показываем/скрываем карточки
            cards.forEach(card => {
                if (status === 'all' || card.dataset.status === status) {
                    card.style.display = 'block';
                } else {
                    card.style.display = 'none';
                }
            });
        }
    </script>
}
