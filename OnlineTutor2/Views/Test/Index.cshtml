@model IEnumerable<OnlineTutor2.Models.TestCategory>
@{
    ViewData["Title"] = "Управление тестами";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="fas fa-tasks text-primary"></i> Управление тестами</h2>
        <p class="text-muted">Выберите тип тестов для создания и управления</p>
    </div>
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-tasks text-muted" style="font-size: 4rem;"></i>
        <h4 class="mt-3 text-muted">Категории тестов не настроены</h4>
        <p class="text-muted">Обратитесь к администратору для настройки категорий тестов</p>
    </div>
}
else
{
    <div class="row">
        @foreach (var category in Model)
        {
            var testsCount = 0;
            switch (category.Id)
            {
                case 1:
                    testsCount = category.SpellingTests?.Count ?? 0;
                    break;
                case 5:
                    testsCount = category.PunctuationTests?.Count ?? 0;
                    break;
                case 6:
                    testsCount = category.OrthoeopyTests?.Count ?? 0;
                    break;
            }

            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 category-card">
                    <div class="card-body d-flex flex-column">
                        <div class="category-icon mb-3 text-center">
                            @if (category.Id == 1)
                            {
                                <i class="fas fa-spell-check text-primary" style="font-size: 3rem;"></i>
                            }
                            else if (category.Id == 5)
                            {
                                <i class="fas fa-exclamation text-warning" style="font-size: 3rem;"></i>
                            }
                            else if (category.Id == 6)
                            {
                                <i class="fas fa-volume-up text-success" style="font-size: 3rem;"></i>
                            }
                            else
                            {
                                <i class="fas fa-tasks text-info" style="font-size: 3rem;"></i>
                            }
                        </div>

                        <h5 class="card-title text-center">@category.Name</h5>

                        @if (!string.IsNullOrEmpty(category.Description))
                        {
                            <p class="card-text text-muted small text-center">@category.Description</p>
                        }

                        <div class="mt-auto text-center">
                            <a asp-action="Category" asp-route-id="@category.Id" class="btn btn-outline-primary w-100">
                                <i class="fas fa-arrow-right"></i> Перейти к тестам
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
