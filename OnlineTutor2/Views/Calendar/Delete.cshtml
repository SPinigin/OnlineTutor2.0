@model OnlineTutor2.Models.CalendarEvent
@{
    ViewData["Title"] = "Удаление занятия";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">
                    <i class="fas fa-exclamation-triangle"></i> Подтверждение удаления
                </h4>
            </div>
            <div class="card-body">
                <div class="alert alert-danger">
                    <i class="fas fa-warning"></i>
                    <strong>Внимание!</strong> Вы собираетесь удалить занятие из календаря.
                    Это действие нельзя отменить.
                </div>

                <h5>Вы действительно хотите удалить это занятие?</h5>

                <div class="card mt-3">
                    <div class="card-header" style="background-color: @Model.Color; color: white;">
                        <h6 class="mb-0">@Model.Title</h6>
                    </div>
                    <div class="card-body">
                        <dl class="row mb-0">
                            @if (!string.IsNullOrEmpty(Model.Description))
                            {
                                <dt class="col-sm-4">Описание:</dt>
                                <dd class="col-sm-8">@Model.Description</dd>
                            }

                            <dt class="col-sm-4">Начало:</dt>
                            <dd class="col-sm-8">@Model.StartDateTime.ToString("dd.MM.yyyy HH:mm")</dd>

                            <dt class="col-sm-4">Окончание:</dt>
                            <dd class="col-sm-8">@Model.EndDateTime.ToString("dd.MM.yyyy HH:mm")</dd>

                            @if (Model.Class != null)
                            {
                                <dt class="col-sm-4">Класс:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-success">@Model.Class.Name</span>
                                </dd>
                            }

                            @if (Model.Student != null)
                            {
                                <dt class="col-sm-4">Ученик:</dt>
                                <dd class="col-sm-8">
                                    <span class="badge bg-info">@Model.Student.User.FullName</span>
                                </dd>
                            }

                            @if (!string.IsNullOrEmpty(Model.Location))
                            {
                                <dt class="col-sm-4">Место:</dt>
                                <dd class="col-sm-8">@Model.Location</dd>
                            }
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <form asp-action="Delete" method="post">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info">
                            <i class="fas fa-eye"></i> Просмотр
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Отмена
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Да, удалить занятие
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
